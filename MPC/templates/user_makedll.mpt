// ***********************************************************************
// Platform Section
// ***********************************************************************

x86-vxworks55-c-only {
  cputype      = pentium
  dll_ext      = .out
  exe_ext      = .out
  testdirstart = "IF NOT EXIST"
  testdirend   = "CALL"
  makedir      = "MKDIR"
  touch        =

  compile_flags = -nostdlib -D_WRS_KERNEL -DSGM_ELF -DCPU_PENTIUM -DCPU=PENTIUM -mcpu=pentium -fvolatile -fsigned-char
}

PPC604-vxworks55-c-only {
  cputype	   = ppc
  dll_ext          = .out
  exe_ext          = .out
  extracppflags += -DCPU_PPC -DCPU=PPC604 -mcpu=8540 -mlongcall
}

PPCE500-vxworks55-c-only {
  cputype	   = ppc
  dll_ext          = .out
  exe_ext          = .out
  extracppflags += -DCPU_PPC -DCPU=PPC85XX -mcpu=8540 -mlongcall -fsigned-char
}

ppc440_linux {
  gnumake       = 1
  compile_flags = -mcpu=440 -mtune=440 -mlongcall -mhard-float
}

e500v2_linux {
  gnumake       = 1
  ldlibs        = -ldl $(subst lib,-l,$(sort $(basename $(notdir $(wildcard /usr/lib/librt.so /lib/librt.so))))) -lpthread
  extracppflags = -D_REENTRANT -mcpu=8540 -mlongcall
}

mpc8313e_linux {
  gnumake       = 1
  ldlibs        = -ldl $(subst lib,-l,$(sort $(basename $(notdir $(wildcard /usr/lib/librt.so /lib/librt.so))))) -lpthread -lstdc++
  extracppflags = -D_REENTRANT -m32
}

common_pc_glibc_small_WRlinux4_gcc{
  gnumake       = 1
  ldlibs        = -ldl $(subst lib,-l,$(sort $(basename $(notdir $(wildcard /usr/lib/librt.so /lib/librt.so))))) -lpthread -lstdc++
  extracppflags = -D_REENTRANT -m32
