}

ppc_lynxos5 {
  dll_ext       =
  extracppflags = -D__NO_INCLUDE_WARN__ -mthreads -mminimal-toc
  linkflags     = -mshared
  ldlibs        = -ldl -lbsd -lbsdregex
}

aix_53 {
  dll_ext          =
  ldlibs           = -ldl -lpthread
  ccflags          = -qrtti=all -qpic=large -qarch=pwr5x
  extracppflags    = -D_REENTRANT
  linkflags        = -brtl
  supports_include =
}

denx {
