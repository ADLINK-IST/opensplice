{
    if [ -d ${DEMOS_dir} ]
    then
        printf "*   Remove old DEMOS/$target directory ... "
        chmod -R 777 ${DEMOS_dir} 2> /dev/null
        rm -rf ${DEMOS_dir};
        echo "Ready"
    fi
}

create_demos_mirror ()
{
    printf "*   Prepare DEMOS master directory ... "
    mkdir -p ${DEMOS_dir}; echo "Ready"
}

copy_windows_redist ()
{
    TARGET_DIR=$1
    MAIN_DRIVE=`echo $SYSTEMDRIVE | awk -F ':' '{ print $1 }'`
    PROGFILES="Program Files"

    case ${SPLICE_HOST} in
        x86_64.*)
            PROGFILES="Program Files (x86)"
            ;;
        esac

    #fallback for when the host is 32 bit but the actual platform is 64 bit
    if [[ "$PROCESSOR_ARCHITECTURE" == "AMD64" ]]; then
         PROGFILES="Program Files (x86)"
    fi

    if [[ "$PROCESSOR_ARCHITEW6432" == "AMD64" ]]; then
         PROGFILES="Program Files (x86)"
    fi


    echo "PROGFILES: |$PROGFILES| PROCESSOR_ARCHITECTURE: |$PROCESSOR_ARCHITECTURE| PROCESSOR_ARCHITEW6432: |$PROCESSOR_ARCHITEW6432|"

    ARCH="x86"
    case ${SPLICE_TARGET} in
        x86_64.*)
            ARCH="x64"
            ;;
        esac


    if [ -z "$VS_VER" ]
    then
        echo "Error - No Visual Studio version set cannot copy Visual Studio Redist"
    else
        REDIST=""
        if [ "$VS_VER" == "14" ]; then
            REDIST="/cygdrive/$MAIN_DRIVE/$PROGFILES/Microsoft Visual Studio 8/SDK/v2.0/BootStrapper/Packages/vcredist_$ARCH/vcredist_$ARCH.exe"
        elif [ "$VS_VER" == "15" ]; then
            REDIST="/cygdrive/$MAIN_DRIVE/$PROGFILES/Microsoft SDKs/Windows/v6.0A/BootStrapper/Packages/vcredist_$ARCH/vcredist_$ARCH.exe"
        elif [ "$VS_VER" == "16" ]; then
            REDIST="/cygdrive/$MAIN_DRIVE/$PROGFILES/Microsoft SDKs/Windows/v7.0A/BootStrapper/Packages/vcredist_$ARCH/vcredist_$ARCH.exe"
        elif [ "$VS_VER" -gt "16" ]; then
            REDIST="${VS_HOME}/VC/redist/1033/vcredist_$ARCH.exe"
        else
            echo "Error - Unknown Visual Studio version ($VS_VER) cannot copy Visual Studio Redist"
        fi
        echo "redist: |$REDIST|"

        if [ ! -f "$REDIST" ]; then
            echo "Error - Cannot find the Visual Studio Redist"
        else
            mkdir -p $TARGET_DIR
            cp "$REDIST" "$TARGET_DIR"
            if [ "$ARCH" == "x86" ]
            then
               cp "${OSPL_HOME}/install/bin/install_vcredist.bat" "$TARGET_DIR"
            else
               cp "${OSPL_HOME}/install/bin/install_vcredist_x64.bat" "$TARGET_DIR/install_vcredist.bat"
            fi
        fi
    fi
}

backup_orig ()
{
    ORIG_DIR=$1
    if [ -d "$ORIG_DIR" ]
    then
        if [ ! -f "$ORIG_DIR-backup.tar" ]
        then
        (
            cd $ORIG_DIR/..;
            O_DIR=`basename $ORIG_DIR`;
            echo "Backup original with $TAR"
            $TAR -cf $O_DIR-backup.tar $O_DIR;
        )
        else
            echo "## There was already a $ORIG_DIR-backup.tar"
        fi
    else
        echo "## There was no $ORIG_DIR to backup"
    fi
}

restore_orig ()
{
    ORIG_DIR=$1
    REMOVE_TAR=$2
    if [ -f "$ORIG_DIR-backup.tar" ]
    then
    (
        cd $ORIG_DIR/..;
        if [ -d "$ORIG_DIR" ]
        then
            rm -rf $ORIG_DIR;
        fi
        O_DIR=`basename $ORIG_DIR`;
        $TAR -xf $O_DIR-backup.tar;
        if [ "$REMOVE_TAR" = "true" ]
        then
            rm $O_DIR-backup.tar;
        fi
    )
    else
        echo "## There was no $ORIG_DIR-backup.tar to restore"
    fi
}

generate_doxygen ()
{
    #This function handles doxygen generation/retrieval. After all calls to generate_doxygen have
    #been made, the push_doxygen function should be called once.
    #
    #Parameter 1: The name of the directory the documentation should be placed in.
    #Parameter 2: The path to the doxygen cfg file
    #
    #The OSPL_DOCS environment variable determines how doxygen generation/retrieval should be
    #performed. OSPL_DOCS can be set to one of 4 values or can be unset.
    #The possible values of OSPL_DOCS are "none", "distrib", "ship" and "update".

    echo "#################### Compile (Generating / retrieving doxygen ${FULLINSTTYPE}) ["`date`"]"

    #If OSPL_DOCS is set to none it doxygen generation/retrieval will be disabled
    if [ "${OSPL_DOCS}" = "none" ]
    then
        echo "Warning: Doxygen generation/retrieval disabled"
        return 0
    fi
    DOCS_DIR=$1
    DOXYGEN_CFG=$2

    #Ship mode
    #
    #On a non-scoreboard build, if OSPL_DOCS is set to "ship" the doxygen documentation will be
    #retrieved from the ospl_docs repository from the branch corresponding to the branch of the
    #build. If the doxygen repository is accessible then this is the default if OSPL_DOCS is unset.
    #
    #On a scoreboard build, if OSPL_DOCS is not set to "update" then this is the default.
    #
    pushd ${OSPL_HOME} >/dev/null
    git ls-remote git://repository2.prismtech.com/ospl_docs &> /dev/null
    REPO_CHECK=$?
    if [[ $REPO_CHECK -eq 0 && ${IS_SCOREBOARD_BUILD} != "yes" ]]
    then
        REPO_CHECK_NOT_SCOREBOARD=0
    fi
    if [ "${OSPL_DOCS}" != "distrib" ]
    then
        if [[ -n $REPO_CHECK_NOT_SCOREBOARD  || "${OSPL_DOCS}" = "ship" ]] || [[ ${IS_SCOREBOARD_BUILD} = "yes" && "${OSPL_DOCS}" != "update" ]]
        then
            echo "Pulling doxygen from repository for $DOXYGEN_CFG..."

            #clone docs repo
            git clone git://repository2.prismtech.com/ospl_docs
            GIT_TAG=$(<etc/docs_git_tag)

            #copy docs from repo
            pushd ospl_docs >/dev/null
            git checkout $GIT_TAG
            mkdir -p ${HDE_dir}/docs/$DOCS_DIR
            cp -rp docs/$DOCS_DIR ${HDE_dir}/docs
            if [ $? -ne 0 ]
            then
                rm -rf ${OSPL_HOME}/ospl_docs
                rm -rf ${HDE_dir}/docs/$DOCS_DIR
                echo "ERROR: No doxygen documentation found in repository for $DOXYGEN_CFG, run a doxygen update"
                return 1
            fi
            popd >/dev/null
        fi
    fi

    #Distrib mode
    #
    #On a non-scoreboard build, if doxygen is installed and OSPL_DOCS is set to "distrib" then the
    #documentation will be generated by doxygen. If the doxygen repository is not accessible then
    #this is the default if OSPL_DOCS is unset.
    #
    #This mode is not available on a scoreboard build.
    #
    command -v doxygen >/dev/null 2>&1
    DOXYGEN_INSTALLED=$?
    if [[ $DOXYGEN_INSTALLED -eq 0 && ${IS_SCOREBOARD_BUILD} != "yes" ]]
    then
        if [[ "${OSPL_DOCS}" = "distrib" || $REPO_CHECK -ne 0 ]]
        then
            echo "Generating doxygen for $DOXYGEN_CFG..."

            mkdir -p ospl_docs/docs/$DOCS_DIR

            #check for dot
            command -v dot >/dev/null 2>&1
            if [ $? -eq 0 ]
            then
                export HAVE_DOT=YES
            else
                export HAVE_DOT=NO
                echo "Warning: dot not found, install Graphviz to generate better class diagrams"
            fi

            #generate doxygen
            if [[ "${DOCS_DIR}" != "isocpp" && "${DOCS_DIR}" != "isocpp2" ]]
            then
                pushd ${OSPL_HOME} >/dev/null
            else
                pushd ${HDE_dir} >/dev/null
            fi
            doxygen $DOXYGEN_CFG
            if [ $? -ne 0 ]
            then
                echo "ERROR: failed to generate doxygen documentation for $DOXYGEN_CFG"
                return 1
            fi
            if [[ "${DOCS_DIR}" != "isocpp" && "${DOCS_DIR}" != "isocpp2" ]]
            then
                popd >/dev/null
                pushd ${HDE_dir} >/dev/null
            fi

            mkdir -p docs
            cp -rp ${OSPL_HOME}/ospl_docs/docs/$DOCS_DIR docs
            popd >/dev/null
        fi
    fi

    #Update mode
    #
    #This mode is not available on a non-scoreboard build.
    #
    #On a scoreboard build, if doxygen is installed and OSPL_DOCS is set to "update" then the
    #documentation will be generated by doxygen and commited to the ospl_docs repository on the
    #branch corresponding to the branch of the build. Pushing the commit occurs later in the
    #push_doxygen function.
    #
    command -v doxygen >/dev/null 2>&1
    if [[ $? -eq 0 && ${IS_SCOREBOARD_BUILD} = "yes" ]]
    then
        if [ "${OSPL_DOCS}" = "update" ]
        then
            echo "Updating doxygen for $DOXYGEN_CFG..."

            #clone docs repo
            git clone ssh://git@repository2.prismtech.com/ospl_docs >/dev/null 2>&1
            mkdir -p ospl_docs/docs/$DOCS_DIR

            #create/checkout branch
            GIT_BRANCH=`sed -n '2p' etc/gitcommit.txt`
            pushd ospl_docs >/dev/null
            git push origin origin:refs/heads/$GIT_BRANCH >/dev/null 2>&1
            git fetch origin >/dev/null 2>&1
            git checkout -b $GIT_BRANCH origin/$GIT_BRANCH
            popd >/dev/null

            #check for dot
            command -v dot >/dev/null 2>&1
            if [ $? -eq 0 ]
            then
                export HAVE_DOT=YES
            else
                export HAVE_DOT=NO
                echo "Warning: dot not found, install Graphviz to generate diagrams"
            fi

            if [[ "${DOCS_DIR}" != "isocpp" && "${DOCS_DIR}" != "isocpp2" ]]
            then
                pushd ${OSPL_HOME} >/dev/null
            else
                pushd ${HDE_dir} >/dev/null
            fi

            pwd
            echo "Delete any existing files in ${OSPL_HOME}/$DOCS_DIR/html before generating latest ...."
            rm -rf ${OSPL_HOME}/ospl_docs/docs/$DOCS_DIR/html >/dev/null

            #generate doxygen
            doxygen $DOXYGEN_CFG
            if [[ "${DOCS_DIR}" != "isocpp" && "${DOCS_DIR}" != "isocpp2" ]]
            then
                popd >/dev/null
                pushd ${HDE_dir} >/dev/null
            fi
            if [ $? -ne 0 ]
            then
                echo "ERROR: failed to generate doxygen documentation for $DOXYGEN_CFG"
                return 1
            fi
            popd >/dev/null

            #copy docs into HDE and commit to repo
            pushd ospl_docs >/dev/null
            mkdir -p ${HDE_dir}/docs/$DOCS_DIR
            cp -rp docs/$DOCS_DIR ${HDE_dir}/docs
            git add -A
            git commit -a -m "$GIT_BRANCH Updated doxygen documentation generated from $DOXYGEN_CFG"
            popd >/dev/null
        fi
    fi
    popd >/dev/null
    return 0
}

push_doxygen ()
{
    #This function handles pushing the generated doxygen back to the ospl_docs repository on the
    #branch corresponding to the branch of the build. This function should only be called once
    #after all calls to generate_doxygen have been made.

    #If OSPL_DOCS is set to none it doxygen generation/retrieval will be disabled
    if [ "${OSPL_DOCS}" = "none" ]
    then
        return 0
    fi

    #Update mode
    #
    #On a scoreboard build, this function will push any committed doxygen updates back to the
    #ospl_docs repository on the branch corresponding to the branch of the build. It will then tag
    #the branch and update the docs_git_tag file found in ${OSPL_HOME}/etc with the name of the tag
    #so that it can later be retrieved when running in "ship" mode. The docs_git_tag file is
    #commited and pushed back to the branch that the doxygen has been generated for. If anyone
    #commits to that branch during the update process then git will be unable to push the
    #docs_git_tag back to the branch and the build will fail.
    #
    #This mode is not available on a non-scoreboard build.
    #
    command -v doxygen >/dev/null
    if [[ $? -eq 0 && ${IS_SCOREBOARD_BUILD} = "yes" ]]
    then
        if [ "${OSPL_DOCS}" = "update" ]
        then
            pushd ${OSPL_HOME} >/dev/null
            GIT_BRANCH=`sed -n '2p' etc/gitcommit.txt`
            git remote set-url origin ssh://git@repository2.prismtech.com/ospli
            git checkout -b TRACK_$GIT_BRANCH origin/$GIT_BRANCH
            if [ $? -eq 0 ]
            then
                echo "Pushing doxygen to repository..."
                pushd ospl_docs >/dev/null
                git push
                if [ $? -ne 0 ]
                then
                    rm -rf ospl_docs
                    echo "ERROR: failed to push doxygen documents"
                    return 1
                fi

                GIT_TAG=$GIT_BRANCH$(date +"_D%Y-%m-%d_T%H-%M-%S")
                git tag $GIT_TAG
                git push origin tag $GIT_TAG
                popd >/dev/null

                echo $GIT_TAG > etc/docs_git_tag
                git add etc/docs_git_tag
                git commit etc/docs_git_tag -m "$GIT_BRANCH Updated doxygen git tag"
                git config push.default upstream
                git push
                if [ $? -ne 0 ]
                then
                    rm -rf ${OSPL_HOME}/ospl_docs
                    echo "ERROR: failed to push doxygen git tag, some one may have done a push during the update"
                    return 1
                fi
            else
                rm -rf ${OSPL_HOME}/ospl_docs
                echo "ERROR: cannot perform doxygen update on a git tag, try again on a branch"
                return 1
            fi
            popd >/dev/null
        fi
    fi
    rm -rf ${OSPL_HOME}/ospl_docs
    return 0
}

generate_javadoc_cj5()
{
    if command -v javadoc 2>/dev/null; then
        CJ5=${OSPL_HOME}/src/api/dcps/java5/cj
        make -C ${CJ5} doc
        mkdir -p ${HDE_dir}/docs/java5
        cp ${OSPL_HOME}/docs/java5/dcpscj5-doc.jar ${HDE_dir}/docs/java5
    fi
}

generate_javadoc_saj5()
{
    if command -v javadoc 2>/dev/null; then
        SAJ5=${OSPL_HOME}/src/api/dcps/java5/saj
        make -C ${SAJ5} doc
        mkdir -p ${HDE_dir}/docs/java5
        cp ${OSPL_HOME}/docs/java5/dcpssaj5-doc.jar ${HDE_dir}/docs/java5
    fi
}

install_face_example()
{
    local COMMON=0
    local EXAMPLE=$1

    echo "*           Example '${EXAMPLE}' ... "
    if [ -d "${OSPL_HOME}/examples/face/${EXAMPLE}" ]
    then
        if [ "${INCLUDE_CXX}" = "yes" -a "${INCLUDE_API_DCPS_ISOCPP2}" = "yes" ]
        then
            echo "*             For isocpp2 ... "
            COMMON=1
            install_git_files_dir_recursive "${OSPL_HOME}/examples/face/${EXAMPLE}/cpp" "${HDE_dir}/examples/face/${EXAMPLE}/cpp"
        fi
        if [ "${INCLUDE_JAVA}" = "yes" -a "${INCLUDE_API_DCPS_SAJ5}" = "yes" ]
        then
            echo "*             For java5 ... "
            COMMON=1
            install_git_files_dir_recursive "${OSPL_HOME}/examples/face/${EXAMPLE}/java" "${HDE_dir}/examples/face/${EXAMPLE}/java"
        fi
        if [ "${COMMON}" -eq 1 ]
        then
            echo "*             Common ... "
            install_git_files_dir_recursive "${OSPL_HOME}/examples/face/${EXAMPLE}/idl" "${HDE_dir}/examples/face/${EXAMPLE}/idl"
        fi
    else
        echo "* ## FACE example ${example} does not exist"
        return 1
    fi
    echo "*           Ready "
    return 0
}

install_face()
{
    #
    # FACE API
    #
    echo "*         For FACE..."
    if [ "${INCLUDE_CXX}" = "yes" -a "${INCLUDE_API_DCPS_ISOCPP2}" = "yes" ]
    then
        echo "*           For isocpp2 ... "
        install_git_files_dir_recursive "${OSPL_HOME}/src/api/face/cpp/include" "${HDE_dir}/include/face/cpp"
        echo "*           Ready "
    fi
    if [ "${INCLUDE_JAVA}" = "yes" -a "${INCLUDE_API_DCPS_SAJ5}" = "yes" ]
    then
        echo "*           For java5 ... "
        mkdir -p ${HDE_dir}/docs/face/java
        make -C ${OSPL_HOME}/src/api/face/java doc
        cp ${OSPL_HOME}/docs/face/java/* ${HDE_dir}/docs/face/java
        echo "*           Ready "
    fi
    install_face_example "HelloWorld"
    echo "*         Ready "
}

install_hde_target ()
{
    target_os=`expr "$target" : '[a-zA-Z0-9_]*\.\([a-zA-Z]*\)'`
    host_os=`expr "$host" : '[a-zA-Z0-9_]*\.\([a-zA-Z]*\)'`

    if [ "${INCLUDE_API_DCPS_ISOCPP}" = "yes" -o "$INCLUDE_API_DCPS_ISOCPP2" = "yes" ]
    then
        if [ "${OSPL_QT_IS_ON}" = "yes" ]
        then
            printf "*     Building [OSPL_HOME]/demos by calling 'make build_demos'... \n"
            make -C ${OSPL_HOME} clean_demos
            make -C ${OSPL_HOME} build_demos
            if [ $? != 0 ]
            then
                echo "ERROR building demos. Suggest you check Qt installation..."
                #return 1
            fi
            echo "Ready"
        fi
    fi

    #
    # Generate standalone execuitables for Roundtrip and Throughput examples
    #
    if [ "${OSPL_PYINSTALL_IS_ON}" = "yes" ]
    then
        printf "*     Building [OSPL_HOME]/examples/dcps/PerformanceScripts by calling 'make build_scripts'... \n"
        make -C ${OSPL_HOME} clean_scripts
        make -C ${OSPL_HOME} build_scripts
        if [ $? != 0 ]
        then
            echo "Error building python scripts. Check pyinstaller is installed..."
        fi
        echo "Ready"
    fi

    if [ "${SOURCE_HOST_SHORT}" != "win" ]
    then
       WINCMD=
    else
       WINCMD=${OSPL_HOME}/bin/ospl_wincmd
    fi

    #
    # Copy interface file for OpenSplice
    #
    printf "*     Copy OpenSplice IDL interface files "
    mkdir ${HDE_dir}/etc
    mkdir ${HDE_dir}/etc/idl
    cp ${OSPL_HOME}/etc/idl/*.idl ${HDE_dir}/etc/idl/
    echo "Ready"

    #
    # Copy in the buildinfo if produced from the scoreboard
    #
    if [ -f "${OSPL_HOME}/etc/BUILDINFO" ]
    then
        printf "*     Copy automated BUILDINFO files "
        cp ${OSPL_HOME}/etc/BUILDINFO ${HDE_dir}/etc/.
        echo "Ready"
    fi

    # Copy in features file to the etc directory of the installer.
    if [ -f "${OSPL_HOME}/etc/features.txt" ]
    then
        cp ${OSPL_HOME}/etc/features.txt ${HDE_dir}/etc/.
    fi

    #
    # Copy in the releaseinfo file
    #
    if [ -f "${OSPL_HOME}/release_info/RELEASE" ]
    then
        printf "*     Copy RELEASE info files "
        cp ${OSPL_HOME}/release_info/RELEASE ${HDE_dir}/etc/RELEASEINFO
        echo "Ready"
    fi

    # java definitions

    mkdir -p ${HDE_dir}/etc/java
    cp ${OSPL_HOME}/etc/java/defs.jdk ${HDE_dir}/etc/java

    #
    # Copy Valgrind suppression file
    #
    if [ "$VALGRIND" = "yes" ]
    then
        echo "*     Copy Valgrind suppression file"
        cp ${OSPL_HOME}/etc/valgrind-suppressions.txt ${HDE_dir}/etc/
        echo "Ready"
    fi

    #
    # Copy IDL preprocessor configuration files
    #
    echo "*     Copy IDL preprocessor configuration files"
    mkdir ${HDE_dir}/etc/idlpp
    cp ${OSPL_HOME}/etc/idl/*.idl ${HDE_dir}/etc/idlpp/
    cp -r ${OSPL_HOME}/etc/idlpp/* ${HDE_dir}/etc/idlpp/

    # Exception for CCPP preprocessor configuration files, because off orb_idependent
    # files required for all orbs.
    rm -rf ${HDE_dir}/etc/idlpp/CCPP
    mkdir ${HDE_dir}/etc/idlpp/CCPP
    for ORB_TMPL in ${ORB_TMPLS}
    do
        mkdir ${HDE_dir}/etc/idlpp/CCPP/${ORB_TMPL}
        cp ${OSPL_HOME}/etc/idlpp/CCPP/orb_independent/corba* ${HDE_dir}/etc/idlpp/CCPP/${ORB_TMPL}
        cp ${OSPL_HOME}/etc/idlpp/CCPP/${ORB_TMPL}/corbaCxxMainInclude ${HDE_dir}/etc/idlpp/CCPP/${ORB_TMPL}
    done
    echo "*     IDL preprocessor configuration files Ready"

    #
    # Copy default configuration file for OpenSplice
    #
    echo "*     Copy OpenSplice configuration files "
    mkdir ${HDE_dir}/etc/config
    if [ "${INCLUDE_SINGLE_PROCESS}" = "yes" ]
    then
        install_configuration_file "${OSPL_HOME}/etc/ospl_sp_no_network.xml" "${HDE_dir}/etc/config"

        if [ "${INCLUDE_SERVICES_DDSI}" = "yes" -o "${INCLUDE_SERVICES_DDSI2E}" = "yes" ]
        then
            install_configuration_file "${OSPL_HOME}/etc/ospl_sp_ddsi.xml" "${HDE_dir}/etc/config"
            install_configuration_file "${OSPL_HOME}/etc/ospl_sp_ddsi_statistics.xml" "${HDE_dir}/etc/config"
            # current requirement is the single process configuration with ddsi2 networking should be default:
            if [ "${target_os}" = "lynxos" ]
            then
                install_configuration_file "${OSPL_OUTER_HOME}/etc/ospl_shmem_ddsi.xml" "${HDE_dir}/etc/config" "ospl.xml"
            else
                install_configuration_file "${OSPL_HOME}/etc/ospl_sp_ddsi.xml" "${HDE_dir}/etc/config" "ospl.xml"
            fi
        else
            install_configuration_file "${OSPL_HOME}/etc/ospl_sp_no_network.xml" "${HDE_dir}/etc/config" "ospl.xml"
        fi
    fi

    # Copy meta-config file used for validating configuration files
    install_ascii_file "${OSPL_HOME}/src/tools/cm/config/code/splice_metaconfig_6.1.xml" "${HDE_dir}/etc" "metaconfig.xml"

    #
    # Copy library files
    #
    echo "*     Copy library files"
    printf "*         For target ... "
    release=${OSPL_HOME}/lib/${target}${source_env}
    if [ -d "${release}" ]
    then
        mkdir ${HDE_dir}/lib
        install_dir $release ${HDE_dir} lib
        if [ "${VXWORKS_KERNEL_MODE}" = "yes" ]
        then
            cp ${HDE_dir}/lib/libddskernel${target_suffix_lib} ${HDE_dir}/lib/libddscore${target_suffix_lib}
        fi
        # remove cpp library
        rm -f ${HDE_dir}/lib/*ddscpp*
        rm -f ${HDE_dir}/lib/*ddslic*
    else
        echo "* ##    No target library files detected"
    fi
    echo "Ready"

    if [ "${target_os}" != "${host_os}" -o "$target" != "$host" ]
    then
        printf "*         For host ... "
        release=${OSPL_HOME}/lib/${host}${source_env}
        if [ -d "${release}" ]
        then
            mkdir ${HDE_dir}/host
            mkdir ${HDE_dir}/host/lib
            install_dir ${release} ${HDE_dir} /host/lib
            rm -f ${HDE_dir}/host/lib/*ddscpp*
            rm -f ${HDE_dir}/host/lib/*ddslic*
        else
            echo "* ##    No host library files detected in ${release}"
        fi
        echo "Ready"
    fi

    #
    # Copy java archive files
    #
    if [ "${INCLUDE_JAVA}" = "yes" ]
    then
        printf "*     Copy JAVA target archive files... "
        release=${OSPL_HOME}/jar/${target}${source_env}
        if [ -d "${release}" ]
        then
            mkdir -p ${HDE_dir}/jar
            install_dir ${release} ${HDE_dir} jar
            # OSPL-6341 Create dcpssaj-osgi-bundle.jar for backwards compatibility
            if  [ "${INCLUDE_API_DCPS_SAJ}" = "yes" ]
            then
                cp ${release}/dcpssaj.jar ${HDE_dir}/jar/dcpssaj-osgi-bundle.jar
            fi
        else
            echo "* ##    No JAVA archive files detected"
        fi
        echo "Ready"
    fi

    #
    # Copy script files
    #
    echo "*     Copy script files"
    release=${OSPL_HOME}/install/bin
    if [ -d "${release}" ]
    then
        mkdir -p ${HDE_dir}/bin
        install_ascii_file "${release}/osplconf${suffix_script}" "${HDE_dir}/bin"
        if [ "${SOURCE_HOST_SHORT}" = "win" ]
        then
            install_ascii_file "${release}/run.vbs" "${HDE_dir}/bin"

            if [ "${SOURCE_TARGET_SHORT}" = "win" ]
            then
                install_ascii_file "${release}/standalone_c_cpp${suffix_script}" "${HDE_dir}/bin"
                install_ascii_file "${release}/standalone_c${suffix_script}" "${HDE_dir}/bin"
                install_ascii_file "${release}/standalone_cpp${suffix_script}" "${HDE_dir}/bin"
                install_ascii_file "${release}/dcps_iso_cpp${suffix_script}" "${HDE_dir}/bin"
                install_ascii_file "${release}/corba_cpp${suffix_script}" "${HDE_dir}/bin"
                install_ascii_file "${release}/c_sharp${suffix_script}" "${HDE_dir}/bin"
                install_ascii_file "${release}/osplctrl${suffix_script}" "${HDE_dir}/bin"
                if [ "${INCLUDE_TOOLS_MMSTAT}" = "yes" ]
                then
                    install_ascii_file "${release}/osplmmstat${suffix_script}" "${HDE_dir}/bin"
                fi
            elif [ "${SOURCE_TARGET_SHORT}" = "wince" ]
            then
                install_ascii_file "${release}/standalone_c_cpp${suffix_script}" "${HDE_dir}/bin"
                install_ascii_file "${release}/standalone_c${suffix_script}" "${HDE_dir}/bin"
                install_ascii_file "${release}/standalone_cpp${suffix_script}" "${HDE_dir}/bin"
                install_ascii_file "${release}/c_sharp${suffix_script}" "${HDE_dir}/bin"
            fi
        fi
        if [ "${INCLUDE_JAVA}" = "yes" -a "${INCLUDE_TOOLS_PROTOBUF}" = "yes" ]
        then
            if [ "${SOURCE_HOST_SHORT}" != "win" ]
            then
                install_ascii_file "${release}/protoc-gen-ddsjava${suffix_script}" "${HDE_dir}/bin"
                install_ascii_file "${release}/protoc-gen-ddscpp${suffix_script}" "${HDE_dir}/bin"
            fi
        fi
    else
        echo "* ##    No script files detected"
    fi
    echo "*     Script files Ready"

    #
    # Copy executable files
    #
    echo "*     Copy OpenSplice executables"
    target_release=${OSPL_HOME}/exec/${target}${source_env}
    host_release=${OSPL_HOME}/exec/${host}${source_env}

    if [ -d "${target_release}" -a -d "${host_release}" ]
    then
        mkdir -p ${HDE_dir}/bin
        install_bin_file ${host_release} ${HDE_dir} bin idlpp${suffix_exe}
        install_bin_file ${host_release} ${HDE_dir} bin cppgen${suffix_exe}

        if [ "${INCLUDE_JAVA}" = "yes" -a "${INCLUDE_TOOLS_PROTOBUF}" = "yes" ]
        then
            if [ "${SOURCE_TARGET_SHORT}" = "win" ]
            then
                install_bin_file ${host_release} ${HDE_dir} bin protoc-gen-ddsjava${suffix_exe}
                install_bin_file ${host_release} ${HDE_dir} bin protoc-gen-ddscpp${suffix_exe}
            fi
        fi
        if [ "${INCLUDE_TOOLS_CONF2C}" = "yes" ]
        then
            install_bin_file ${host_release} ${HDE_dir} bin osplconf2c${suffix_exe}
        fi

        if [ "${SOURCE_TARGET_SHORT}" != "int" ]
        then
            if [ "${INCLUDE_TOOLS_MMSTAT}" = "yes" ]
            then
                install_bin_file ${target_release} ${HDE_dir} bin mmstat${target_suffix_exe}
            fi

            if [ "${INCLUDE_TOOLS_DEBUG_DBD}" = "yes" ]
            then
                install_bin_file ${target_release} ${HDE_dir} bin dbd${target_suffix_exe}

            fi

            if [ "${INCLUDE_TOOLS_SHMDUMP}" = "yes" ]
            then
                install_bin_file ${target_release} ${HDE_dir} bin shmdump${target_suffix_exe}
            fi
        fi

        pdbfiles=`ls ${OSPL_HOME}/exec/${target}${source_env}/*.pdb 2>/dev/null`
        if [ "${SOURCE_TARGET_SHORT}" = "win" -o "${SOURCE_TARGET_SHORT}" = "wince" ] && [ -n "${pdbfiles}" ]
        then
            cp ${pdbfiles} ${HDE_dir}/bin
            rm -rf ${HDE_dir}/bin/corecount.pdb
        fi
    else
        echo "* ##    No executables detected"
    fi

    if [ "${SOURCE_TARGET_SHORT}" = "win" -o "${SOURCE_TARGET_SHORT}" = "wince" ]
    then
        if [ "${target_os}" != "${host_os}" -o "$target" != "$host" ] # cross compile
        then
            EXTRALIBPATH=/host
        fi
        # Put all the *.pdb's into the bin directory if this is a win host platform.
        mv ${HDE_dir}${EXTRALIBPATH}/lib/*.dll ${HDE_dir}/bin/.  >& /dev/null
        mv ${HDE_dir}${EXTRALIBPATH}/lib/*.pdb ${HDE_dir}/bin/.  >& /dev/null
        rm -rf ${HDE_dir}/bin/corecount.pdb
        mv ${HDE_dir}/lib/*.netmodule ${HDE_dir}/bin/.  >& /dev/null
    fi

    #
    # Copy include files
    #
    echo "*     Copy language specific interface files"
    mkdir ${HDE_dir}/include
    mkdir ${HDE_dir}/include/sys
    mkdir ${HDE_dir}/include/${OSPL_TARGET_HEADERS}
    mkdir ${HDE_dir}/include/${OSPL_TARGET_HEADERS}/include

    os=`expr "${target}" : '[A-Za-z0-9_-]*\.\([^_]*\)'`
    if [ "${os}" = "elinos6.1" -o "${os}" = "elinos6.0" ]
    then
       os=linux
    fi

    mkdir ${HDE_dir}/include/posix
    mkdir ${HDE_dir}/include/posix/include

    mkdir ${HDE_dir}/include/common
    mkdir ${HDE_dir}/include/common/include

    #
    # Copy Generic DCPS Docs
    #
    if [ -n "${OSPL_DOCS}" ] && [ "${INCLUDE_API_DCPS_DOCS}" = "yes" -a "${OSPL_DOCS}" != "none" -a "${OSPL_DOCS}" != "ship" ]
    then
        echo "*         For shared docs"
        install_git_files_dir_recursive "${OSPL_HOME}/src/api/dcps/docs" "${HDE_dir}/include/dcps/docs"
    fi

    install_ascii_fileset "${OSPL_HOME}/src/abstraction/os/posix/include/os_*.h" "${HDE_dir}/include/posix/include/"
    install_ascii_fileset "${OSPL_HOME}/src/abstraction/os/common/include/os_*.h" "${HDE_dir}/include/common/include/"

    mkdir ${HDE_dir}/include/svr4
    mkdir ${HDE_dir}/include/svr4/include

    if [ -d "${OSPL_HOME}/src/abstraction/os/${OSPL_TARGET_HEADERS}/include/" ]
    then
        install_ascii_fileset "${OSPL_HOME}/src/abstraction/os/${OSPL_TARGET_HEADERS}/include/os_*.h" "${HDE_dir}/include/${OSPL_TARGET_HEADERS}/include"
    fi

    install_ascii_fileset "${OSPL_HOME}/src/abstraction/os/include/os_*.h" "${HDE_dir}/include/sys"
    install_ascii_fileset "${OSPL_HOME}/src/abstraction/os/include/vortex_os.h" "${HDE_dir}/include/sys"
    install_ascii_fileset "${OSPL_HOME}/src/database/database/include/[cq]_*.h" "${HDE_dir}/include/sys"
    install_ascii_fileset "${OSPL_HOME}/src/kernel/include/v_*.h" "${HDE_dir}/include/sys"
    install_ascii_fileset "${OSPL_HOME}/src/user/include/u_*.h" "${HDE_dir}/include/sys"
    install_ascii_fileset "${OSPL_HOME}/src/utilities/include/ut_*.h" "${HDE_dir}/include/sys"
    install_ascii_fileset "${OSPL_HOME}/src/api/dcps/common/include/cmn_*.h" "${HDE_dir}/include/sys"
    install_ascii_file    "${OSPL_HOME}/src/osplcore/bld/${SPLICE_TARGET}/kernelModule.h" "${HDE_dir}/include/sys"
    install_ascii_file    "${OSPL_HOME}/src/osplcore/bld/${SPLICE_TARGET}/kernelModuleI.h" "${HDE_dir}/include/sys"

    #
    # Copy C&M related include files
    #

    if [ "${INCLUDE_API_CM}" = "yes" ]
    then
        echo "*     Copy include files for C&M"
        mkdir ${HDE_dir}/include/cm
        install_ascii_fileset "${OSPL_HOME}/src/api/cm/xml/include/*.h" \
            "${HDE_dir}/include/cm"
        echo "*     C&M Ready"
    fi

    #
    # Copy Protobuf related files (only when JAVA is available)
    #
    if [ "${INCLUDE_JAVA}" = "yes" -a "${INCLUDE_TOOLS_PROTOBUF}" = "yes" ]
    then
        echo "*     Copy proto files for protobuf integration"
        mkdir -p ${HDE_dir}/include/protobuf/omg/dds
        release=`ls -d ${OSPL_HOME}/src/tools/protobuf 2>/dev/null`
        install_ascii_fileset "${OSPL_HOME}/src/tools/protobuf/protos/omg/dds/*" "${HDE_dir}/include/protobuf/omg/dds"

        if [ "${INCLUDE_API_DCPS_SAJ5}" = "yes" ]
        then
            mkdir -p ${HDE_dir}/etc/protobuf/SAJ5
            install_ascii_fileset "${OSPL_HOME}/etc/protobuf/SAJ5/*" "${HDE_dir}/etc/protobuf/SAJ5"
        fi

        if [ "${INCLUDE_CXX}" = "yes" -a "${INCLUDE_API_DCPS_ISOCPP2}" = "yes" ]
        then
            mkdir -p ${HDE_dir}/etc/protobuf/ISOCPP2
            install_ascii_fileset "${OSPL_HOME}/etc/protobuf/ISOCPP2/*" "${HDE_dir}/etc/protobuf/ISOCPP2"
        fi
    fi
    echo "*     Protobuf Ready"

    #
    # Create and sign a Global Assembly for the SACS Dll
    #
    if [ "${INCLUDE_CS}" = "yes" -a "${INCLUDE_API_DCPS_SACS}" = "yes" ]
    then
        if [ "${SOURCE_TARGET_SHORT}" = "win" -o "${SOURCE_TARGET_SHORT}" = "wince" ]
        then
            echo "*     Create and sign a Global Assembly for the SACS DLL"
            cskeyfile=`cygpath -d "${OSPL_HOME}/src/api/dcps/sacs/dcpssacs.snk"`
            csoutdir=`cygpath -d "${HDE_dir}/bin/"`
            csmodfile=`cygpath -d "${OSPL_HOME}/lib/${target}${source_env}/dcpssacs.netmodule"`
            csoutfile="${csoutdir}${CS_ASSEMBLY_NAME}.dll"

             case "${target}" in
                x86.*)
                    CS_PLATFORM=x86
                    ;;
                x86_64.*)
                    CS_PLATFORM=x64
                    ;;
                *)
                    CS_PLATFORM=anycpu
                    ;;
            esac

            al /t:library /keyfile:"${cskeyfile}" /platform:${CS_PLATFORM} /v:${CS_DLL_VERSION} /out:"${csoutfile}" "${csmodfile}"
        fi
        # This needs to be changed when we support C# for linux and add an else part
        # that will set all these variables correctly and call the appropriate mono
        # executable for the assembly linker.

        generate_doxygen cs_api ${OSPL_HOME}/etc/doxygen_cs_api.cfg
        if [ $? -ne 0 ]
        then
            generate_doxygen cs_api doxygen_cs_api.cfg
            if [ $? -ne 0 ]
            then
                return 1
            fi
        fi
        echo "*     Ready"
    fi

    #
    # Copy DCPS related include files
    #
    echo "*     Copy include files"
    echo "*       For DCPS"

    mkdir -p ${HDE_dir}/include/dcps
    mkdir -p ${HDE_dir}/custom_lib

    #
    # DCPS C++ CCPP
    #
    if [ "${INCLUDE_API_DCPS_CCPP}" = "yes" ]
    then
        release=`ls -d ${OSPL_HOME}/src/api/dcps/c++/ccpp/bld/${target}${source_env} 2>/dev/null`
        echo "*         For C++"
        echo "*           For CCPP ... "
        mkdir ${HDE_dir}/include/dcps/C++
        mkdir ${HDE_dir}/include/dcps/C++/CCPP

        install_ascii_fileset "${OSPL_HOME}/src/api/dcps/c++/ccpp/include/ccpp_dds_basic_types.h" \
            "${HDE_dir}/include/dcps/C++/CCPP"
        for ORB_TMPL in ${ORB_TMPLS}
        do
            mkdir ${HDE_dir}/include/dcps/C++/CCPP/${ORB_TMPL}
            install_ascii_fileset "${OSPL_HOME}/src/api/dcps/c++/ccpp/include/orb/${ORB_TMPL}/*.[ih]" \
              "${HDE_dir}/include/dcps/C++/CCPP/${ORB_TMPL}"
        done

        install_ascii_fileset "${release}/*.h" "${HDE_dir}/include/dcps/C++/CCPP/${SPLICE_ORB}"
        install_ascii_fileset "${release}/*.inl" "${HDE_dir}/include/dcps/C++/CCPP/${SPLICE_ORB}"

        install_ascii_fileset "${OSPL_HOME}/src/api/dcps/c++/common/include/*.[ih]" \
            "${HDE_dir}/include/dcps/C++/CCPP"
        install_ascii_fileset "${OSPL_HOME}/src/api/dcps/c++/ccpp/include/*.[ih]"  \
            "${HDE_dir}/include/dcps/C++/CCPP"
        install_ascii_fileset "${OSPL_HOME}/src/api/dcps/c++/ccpp/bld/${SPLICE_TARGET}/*.[ih]" \
            "${HDE_dir}/include/dcps/C++/CCPP"
        echo "*           CCPP Ready"
    fi

    #
    # DCPS C++ SACPP
    #
    if [ "${INCLUDE_API_DCPS_SACPP}" = "yes" ]
    then
        release=`ls -d ${OSPL_HOME}/src/api/dcps/c++/sacpp/bld/${target}${source_env} 2>/dev/null`
        echo "*         For C++"
        echo "*           For SACPP ... "
        if [ ! -d ${HDE_dir}/include/dcps/C++ ]
        then
            mkdir ${HDE_dir}/include/dcps/C++
        fi
        mkdir ${HDE_dir}/include/dcps/C++/SACPP
        mkdir ${HDE_dir}/include/dcps/C++/SACPP/mapping

        install_ascii_fileset "${release}/*.[ih]" "${HDE_dir}/include/dcps/C++/SACPP"
        install_ascii_fileset "${OSPL_HOME}/src/api/dcps/c++/common/include/*.h" \
            "${HDE_dir}/include/dcps/C++/SACPP"
        install_ascii_fileset "${OSPL_HOME}/src/api/dcps/c++/sacpp/include/*.h" \
            "${HDE_dir}/include/dcps/C++/SACPP"
        install_ascii_fileset "${OSPL_HOME}/src/api/dcps/c++/sacpp/include/mapping/*.h" \
            "${HDE_dir}/include/dcps/C++/SACPP/mapping"
        install_ascii_fileset "${OSPL_HOME}/src/api/dcps/c++/sacpp/bld/${SPLICE_TARGET}/*.[ih]" \
            "${HDE_dir}/include/dcps/C++/SACPP"
        echo "*           SACPP  Ready"
        echo "*         C++ Ready"
    fi

    #
    # Streams Batching API
    #
    if [ "$INCLUDE_API_STREAMS" = "yes" ]
    then
        echo "*       For Streams..."
        mkdir -p ${HDE_dir}/include/streams

        #
        # Streams CCPP
        #
        if [ "$INCLUDE_API_STREAMS_CCPP" = "yes" ]
        then
            echo "*           Corba C++"
            mkdir -p ${HDE_dir}/include/streams/CCPP
            install_ascii_fileset "$OSPL_HOME/src/api/streams/ccpp/include/*.h" "${HDE_dir}/include/streams/CCPP"
        fi

        #
        # Streams SACPP
        #
        if [ "$INCLUDE_API_STREAMS_SACPP" = "yes" ]
        then
            echo "*           Standalone C++"
            mkdir -p ${HDE_dir}/include/streams/SACPP
            install_ascii_fileset "$OSPL_HOME/src/api/streams/sacpp/include/*.h" "${HDE_dir}/include/streams/SACPP"
            install_ascii_file "$OSPL_HOME/src/api/streams/ccpp/include/ccpp_StreamDataReader_impl.h" "${HDE_dir}/include/streams/SACPP"
            install_ascii_file "$OSPL_HOME/src/api/streams/ccpp/include/ccpp_StreamDataWriter_impl.h" "${HDE_dir}/include/streams/SACPP"
            install_ascii_file "$OSPL_HOME/src/api/streams/ccpp/include/ccpp_streamsT_impl.h" "${HDE_dir}/include/streams/SACPP"
            install_ascii_file "$OSPL_HOME/src/api/streams/ccpp/include/ccpp_StreamsUtils.h" "${HDE_dir}/include/streams/SACPP"
            install_ascii_file "$OSPL_HOME/src/api/streams/ccpp/include/ccpp_streams_if.h" "${HDE_dir}/include/streams/SACPP"
        fi

        #
        # Streams ISOCPP
        #
        if [ "${INCLUDE_API_STREAMS_ISOCPP}" = "yes" ]
        then
            echo "*           ISO C++"
            install_git_files_dir_recursive "$OSPL_HOME/src/api/streams/isocpp/include/" "${HDE_dir}/include/streams/isocpp"
        fi

        echo "*       Streams Ready"
    fi

    #
    # DCPS C++ ISOCPP
    #
    if [ "${INCLUDE_CXX}" = "yes" -a "$INCLUDE_API_DCPS_ISOCPP" = "yes" ] || [ "${OSPL_DOCS}" = "update" ]
    then
        echo "*           For isocpp ... "
        mkdir -p ${HDE_dir}/include/dcps/C++/isocpp
        mkdir -p ${HDE_dir}/custom_lib/isocpp
        install_git_files_dir_recursive "${OSPL_HOME}/src/api/dcps/isocpp/include" ${HDE_dir}/include/dcps/C++/isocpp
        install_git_files_dir_recursive "${OSPL_HOME}/src/api/dcps/isocpp/code"    ${HDE_dir}/custom_lib/isocpp
        install_ascii_fileset "${OSPL_HOME}/src/api/dcps/isocpp/*.mp?" "${HDE_dir}/custom_lib"
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/BuiltInTopics/isocpp" ${HDE_dir}/examples/dcps/BuiltInTopics/isocpp
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/ContentFilteredTopic/isocpp" ${HDE_dir}/examples/dcps/ContentFilteredTopic/isocpp
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/HelloWorld/isocpp" ${HDE_dir}/examples/dcps/HelloWorld/isocpp
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Lifecycle/isocpp" ${HDE_dir}/examples/dcps/Lifecycle/isocpp
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Listener/isocpp" ${HDE_dir}/examples/dcps/Listener/isocpp
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Ownership/isocpp" ${HDE_dir}/examples/dcps/Ownership/isocpp
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/QueryCondition/isocpp" ${HDE_dir}/examples/dcps/QueryCondition/isocpp
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/RoundTrip/isocpp" ${HDE_dir}/examples/dcps/RoundTrip/isocpp

        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/ContentFilteredTopic/idl" ${HDE_dir}/examples/dcps/ContentFilteredTopic/idl
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/HelloWorld/idl" ${HDE_dir}/examples/dcps/HelloWorld/idl
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Lifecycle/idl" ${HDE_dir}/examples/dcps/Lifecycle/idl
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Listener/idl" ${HDE_dir}/examples/dcps/Listener/idl
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Ownership/idl" ${HDE_dir}/examples/dcps/Ownership/idl
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/QueryCondition/idl" ${HDE_dir}/examples/dcps/QueryCondition/idl
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/RoundTrip/idl" ${HDE_dir}/examples/dcps/RoundTrip/idl

        #
        # Streams C++ ISOCPP
        #
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Throughput/isocpp" ${HDE_dir}/examples/dcps/Throughput/isocpp
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Tutorial/isocpp" ${HDE_dir}/examples/dcps/Tutorial/isocpp
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/WaitSet/isocpp" ${HDE_dir}/examples/dcps/WaitSet/isocpp

        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Throughput/idl" ${HDE_dir}/examples/dcps/Throughput/idl
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Tutorial/idl" ${HDE_dir}/examples/dcps/Tutorial/idl
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/WaitSet/idl" ${HDE_dir}/examples/dcps/WaitSet/idl
        if [ "${OSPL_QT_IS_ON}" = "yes" ]
        then
            mkdir -p ${HDE_dir}/demos
            install_bin_file ${target_release} ${HDE_dir} bin demo_ishapes${target_suffix_exe}
            install_git_files_dir_recursive "${OSPL_HOME}/demos/iShapes" ${HDE_dir}/demos/iShapes
            # remove the standalone demo files
            rm -rf ${HDE_dir}/demos/iShapes/distrib ${HDE_dir}/demos/iShapes/scripts
        fi
        # delete the 'detail' directories from the ISO C++ spec headers - these are examples to vendors
        # We keep them in the repo to simplify bi-directional merges spec <-> wor implementation
        find ${HDE_dir}/include/dcps/C++/isocpp/spec -name "detail" -type d | xargs rm -rf 2>/dev/null

        #The raw generated docs contain references to TFiles and DELEGATES this is not representitive
        #of the public API and adds unessary complexity to the docs, the following script removes references
        #to both Tfiles eg. TEntity, TDomainParticipant and references to DELEGATE templated parameters
        if [ -n "${OSPL_DOCS}" ] && [ "${INCLUDE_API_DCPS_ISOCPP}" = "yes" -a "${OSPL_DOCS}" != "none" -a "${OSPL_DOCS}" != "ship" ]
        then
            if [ "${INCLUDE_API_STREAMS_ISOCPP}" = "yes" ]
            then
                python ${OSPL_HOME}/src/api/dcps/isocpp/predoxygen.py \
                                -i ${HDE_dir}/include/streams/isocpp/spec \
                                -i ${HDE_dir}/include/dcps/C++/isocpp/spec \
                                -o ${HDE_dir}/include/dcps/C++/isocpp/doxy
            else
                python ${OSPL_HOME}/src/api/dcps/isocpp/predoxygen.py \
                                -i ${HDE_dir}/include/dcps/C++/isocpp/spec \
                                -o ${HDE_dir}/include/dcps/C++/isocpp/doxy

            fi
        fi
        generate_doxygen isocpp ${OSPL_HOME}/etc/doxygen_isocpp_distrib.cfg
        if [ $? -ne 0 ]
        then
            return 1
        fi
        echo "*           isocpp  Ready"

        if [ -n "${OSPL_DOCS}" ] && [ "${INCLUDE_API_DCPS_ISOCPP}" = "yes" -a "${OSPL_DOCS}" != "none" -a "${OSPL_DOCS}" != "ship" ]
        then
            #Delete the temporary file created by predoxygen.py script
            rm -rv ${HDE_dir}/include/dcps/C++/isocpp/doxy
        fi
    fi

    #
    # DCPS C++ ISOCPP2
    #
    if [ "${INCLUDE_CXX}" = "yes" -a "${INCLUDE_API_DCPS_ISOCPP2}" = "yes" ] || [ "$OSPL_DOCS" = "update" ]
    then
        echo "*           For isocpp2 ... "
        mkdir -p ${HDE_dir}/include/dcps/C++/isocpp2
        mkdir -p ${HDE_dir}/custom_lib/isocpp2
        install_git_files_dir_recursive "${OSPL_HOME}/src/api/dcps/isocpp2/include" ${HDE_dir}/include/dcps/C++/isocpp2
        install_git_files_dir_recursive "${OSPL_HOME}/src/api/dcps/isocpp2/code"    ${HDE_dir}/custom_lib/isocpp2
        install_ascii_fileset "${OSPL_HOME}/src/api/dcps/isocpp2/*.mp?" "${HDE_dir}/custom_lib"

        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/BuiltInTopics/isocpp2" ${HDE_dir}/examples/dcps/BuiltInTopics/isocpp2
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/ContentFilteredTopic/isocpp2" ${HDE_dir}/examples/dcps/ContentFilteredTopic/isocpp2
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/HelloWorld/isocpp2" ${HDE_dir}/examples/dcps/HelloWorld/isocpp2
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Lifecycle/isocpp2" ${HDE_dir}/examples/dcps/Lifecycle/isocpp2
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Listener/isocpp2" ${HDE_dir}/examples/dcps/Listener/isocpp2
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Ownership/isocpp2" ${HDE_dir}/examples/dcps/Ownership/isocpp2
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/QueryCondition/isocpp2" ${HDE_dir}/examples/dcps/QueryCondition/isocpp2
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/RoundTrip/isocpp2" ${HDE_dir}/examples/dcps/RoundTrip/isocpp2
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Throughput/isocpp2" ${HDE_dir}/examples/dcps/Throughput/isocpp2
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Tutorial/isocpp2" ${HDE_dir}/examples/dcps/Tutorial/isocpp2
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/WaitSet/isocpp2" ${HDE_dir}/examples/dcps/WaitSet/isocpp2

        #The raw generated docs contain references to TFiles and DELEGATES this is not representitive
        #of the public API and adds unessary complexity to the docs, the following script removes references
        #to both Tfiles eg. TEntity, TDomainParticipant and references to DELEGATE templated parameters
        if [ -n "${OSPL_DOCS}" ] && [ "${INCLUDE_API_DCPS_ISOCPP2}" = "yes" -a "${OSPL_DOCS}" != "none" -a "${OSPL_DOCS}" != "ship" ]
        then
            python ${OSPL_HOME}/src/api/dcps/isocpp2/predoxygen.py \
                            -i ${HDE_dir}/include/dcps/C++/isocpp2/dds \
                            -o ${HDE_dir}/include/dcps/C++/isocpp2/doxy
        fi
        generate_doxygen isocpp2 ${OSPL_HOME}/etc/doxygen_isocpp2_distrib.cfg
        if [ $? -ne 0 ]
        then
            return 1
        fi
        echo "*           isocpp2  Ready"

        if [ -n "${OSPL_DOCS}" ] && [ "${INCLUDE_API_DCPS_ISOCPP2}" = "yes" -a "${OSPL_DOCS}" != "none" -a "${OSPL_DOCS}" != "ship" ]
        then
            #Delete the temporary file created by predoxygen.py script
            rm -rv ${HDE_dir}/include/dcps/C++/isocpp2/doxy
        fi

        if [[ "${INCLUDE_API_FACE}" = "yes"  || "${OSPL_DOCS}" = "update" ]]
        then
            generate_doxygen face ${OSPL_HOME}/etc/doxygen_isocpp2_face_api.cfg
            if [ $? -ne 0 ]
            then
                return 1
            fi
            echo "*           ISO C++ 2 Face doxygen documentation  Ready"
        fi
    fi

    #
    # FACE
    #
    if [ "${INCLUDE_API_FACE}" = "yes" ]
    then
        install_face
    fi

    #
    # Copy custom Protobuf (only when JAVA is available)
    #
    if [ "${INCLUDE_JAVA}" = "yes" -a "${INCLUDE_TOOLS_PROTOBUF}" = "yes" ]
    then
        echo "*     Copy custom Protobuf support ... "
        release=${OSPL_HOME}/src/tools/protobuf
        mkdir -p ${HDE_dir}/custom_lib/protobuf
        cp ${release}/custom_lib/* ${HDE_dir}/custom_lib/protobuf
        update_copyright ${HDE_dir}/custom_lib/protobuf
        mkdir -p ${HDE_dir}/custom_lib/protobuf/code
        cp -r ${release}/gpb/code ${HDE_dir}/custom_lib/protobuf
        echo "*   Protobuf  Ready"
    fi

    #
    # DCPS C SAC
    #
    if [ "${INCLUDE_API_DCPS_SAC}" = "yes" ]
    then
        echo "*         For C"
        echo "*           For SAC ... "
        mkdir ${HDE_dir}/include/dcps/C
        mkdir ${HDE_dir}/include/dcps/C/SAC
        install_ascii_fileset "${OSPL_HOME}/src/api/dcps/sac/include/*.h" \
            "${HDE_dir}/include/dcps/C/SAC"
        install_ascii_fileset "${OSPL_HOME}/src/api/dcps/sac/bld/${SPLICE_TARGET}/*.h" \
            "${HDE_dir}/include/dcps/C/SAC"
        echo "*           SAC Ready"
        echo "*         C Ready"
    fi

    #
    # DCPS C C99
    #
    if [ "${INCLUDE_API_DCPS_C99}" = "yes" ]
    then
        echo "*         For C"
        echo "*           For C99 ... "
        mkdir -p ${HDE_dir}/include/dcps/C
        mkdir -p ${HDE_dir}/include/dcps/C/C99
        mkdir -p ${HDE_dir}/include/dcps/C/C99/dds
        install_ascii_fileset "${OSPL_HOME}/src/api/dcps/c99/include/*.h" \
            "${HDE_dir}/include/dcps/C/C99"
        install_ascii_fileset "${OSPL_HOME}/src/api/dcps/c99/include/dds/*.h" \
            "${HDE_dir}/include/dcps/C/C99/dds"
        install_ascii_fileset "${OSPL_HOME}/src/api/dcps/c99/bld/${SPLICE_TARGET}/*.h" \
            "${HDE_dir}/include/dcps/C/C99"
        echo "*           C99 Ready"
        echo "*         C Ready"
    fi

    if [[ "${INCLUDE_API_DCPS_C99}" = "yes"  || "${OSPL_DOCS}" = "update" ]]
    then
        generate_doxygen c99 ${OSPL_HOME}/etc/doxygen_c99_api.cfg
        if [ $? -ne 0 ]
        then
            return 1
        fi
        echo "*           C99 doxygen documentation  Ready"
    fi


    if [[ "${INCLUDE_API_DCPS_SAJ5}" = "yes"  || "${OSPL_DOCS}" = "update" ]]
    then
        generate_doxygen java5 ${OSPL_HOME}/etc/doxygen_java5_api.cfg
        if [ $? -ne 0 ]
        then
            return 1
        fi
        echo "*           Java 5 doxygen documentation  Ready"
    fi

    #
    # DCPS JAVA 5
    #
    if [ "${INCLUDE_JAVA}" = "yes" -a "${INCLUDE_API_DCPS_SAJ5}" = "yes" ]
    then
        echo "*         For Java5 stand-alone"
        generate_javadoc_saj5
        if [[ "${INCLUDE_API_FACE}" = "yes"  || "${OSPL_DOCS}" = "update" ]]
        then
            generate_doxygen face ${OSPL_HOME}/etc/doxygen_java_face_api.cfg
            if [ $? -ne 0 ]
            then
                return 1
            fi
            echo "*           Java Face doxygen documentation  Ready"
        fi

    fi

    if [ "${INCLUDE_JAVA}" = "yes" -a "${INCLUDE_API_DCPS_CJ5}" = "yes" ]
    then
        echo "*         For Java5 with CORBA cohabitation"
        generate_javadoc_cj5
    fi
    echo "*       DCPS Ready"
    echo "*     Language specific interface files Ready"

    #
    # Copy custom CJ
    #
    if [ "${INCLUDE_JAVA}" = "yes" -a "${INCLUDE_API_DCPS_CJ}" = "yes" ]
    then
        if [ "${SOURCE_TARGET_SHORT}" != "win" ]
        then
            echo "*     Copy custom CJ support ..."

            mkdir -p ${HDE_dir}/custom_lib/cj/java
            release=`ls -d ${OSPL_HOME}/src/api/dcps/java 2>/dev/null`
            cp -r ${release}/common/java/code ${HDE_dir}/custom_lib/cj/java
            cp -r ${release}/saj/code ${HDE_dir}/custom_lib/cj/java

            echo "*       Copying script files for custom library generation ..."
            install_ascii_file "${release}/cj/custom/README"   "${HDE_dir}/custom_lib/cj"
            install_ascii_file "${release}/cj/custom/BUILD"    "${HDE_dir}/custom_lib/cj/java"
            install_ascii_file "${release}/cj/custom/orbdeps"  "${HDE_dir}/custom_lib/cj/java"
        fi
        echo "*     custom CJ support Ready"
    fi
    #
    # Copy custom CCPP
    #
    if [ "${INCLUDE_API_DCPS_CCPP}" = "yes" ]
    then
        echo "*     Copy custom CCPP support ... "
        mkdir -p ${HDE_dir}/custom_lib
        mkdir -p ${HDE_dir}/custom_lib/ccpp

        # Code that can be re-used from common.
        release=${OSPL_HOME}/src/api/dcps/c++/common
        install_ascii_fileset "${release}/code/*.cpp" "${HDE_dir}/custom_lib/ccpp"

        # CCPP specific makefile stuff.
        release=${OSPL_HOME}/src/api/dcps/c++/ccpp
        install_ascii_fileset "${release}/DCPS_CORBA_Cohab_Cpp.mpc" "${HDE_dir}/custom_lib"

        if [ -f ${release}/custom/makefile_$PLATFORM_EXT ]
        then
            install_ascii_file "${release}/custom/makefile_$PLATFORM_EXT" \
                "${HDE_dir}/custom_lib/ccpp" "makefile"
        fi

        install_ascii_file "${release}/custom/README" "${HDE_dir}/custom_lib/ccpp"
        install_ascii_file "${release}/custom/setup" "${HDE_dir}/custom_lib/ccpp"
        install_ascii_file "${OSPL_HOME}/setup/makefiles/orbdeps.mak" "${HDE_dir}/custom_lib/ccpp"

        echo "*     custom CCPP support Ready"
    fi

    #
    # Copy custom SACPP
    #
    if [ "${INCLUDE_API_DCPS_SACPP}" = "yes" ]
    then
        echo "*     Copy custom SACPP support ... "
        mkdir -p ${HDE_dir}/custom_lib/sacpp

        # Code that can be re-used from common.
        release=${OSPL_HOME}/src/api/dcps/c++/common
        install_ascii_fileset "${release}/code/*.cpp" "${HDE_dir}/custom_lib/sacpp"

        # SACPP specific makefile stuff.
        release=${OSPL_HOME}/src/api/dcps/c++/sacpp
        install_ascii_fileset "${release}/code/*.cpp" "${HDE_dir}/custom_lib/sacpp"

        if [ -f ${release}/custom/makefile_$PLATFORM_EXT ]
        then
             install_ascii_file "${release}/custom/makefile_${PLATFORM_EXT}" \
                "${HDE_dir}/custom_lib/sacpp" "makefile"
        fi

        release=${OSPL_HOME}/src/api/dcps/c++/sacpp
        install_ascii_file "${release}/custom/README" "${HDE_dir}/custom_lib/sacpp"
        if [ "${INCLUDE_API_DCPS_SACPP_PROJECT}" ]
        then
           install_ascii_file "${release}/DCPS_Stand_Alone_Cpp.mpc" "${HDE_dir}/custom_lib"
        fi
        echo "*     custom SACPP support Ready"
    fi

    #
    # Examples
    #
    echo "*     Copy examples"
    mkdir -p ${HDE_dir}/examples

    install_ascii_fileset "${OSPL_HOME}/examples/*.mwc" \
            ${HDE_dir}/examples

    if [ "${SOURCE_TARGET_SHORT}" = "win" -o "${SOURCE_TARGET_SHORT}" = "wince" ]
    then
        echo "*       Copying new API examples"
        install_example "DDSAPIHelper"
    fi

    # Integrity Specific SP example
    if [ "${SOURCE_TARGET_SHORT}" = "int" ]
    then
        echo "* Creating Integrity single process example"
        mkdir -p ${HDE_dir}/examples/integrity
        if [ "${SOURCE_HOST_SHORT}" = "win" ]
        then
            install_git_files_dir_recursive "${OSPL_OUTER_HOME}/examples/integrity/sacpppingpong/win/" "${HDE_dir}/examples/integrity/"
        else
            install_git_files_dir_recursive "${OSPL_OUTER_HOME}/examples/integrity/sacpppingpong/linux/" "${HDE_dir}/examples/integrity/"
        fi
    fi

    echo "*       For DCPS"

    mkdir -p ${HDE_dir}/examples/dcps

    install_git_files_dir_recursive "${OSPL_HOME}/examples/common" "${HDE_dir}/examples/common"
    # New examples not supported on vxworks or integrity yet so do not include
    if [ "${SOURCE_TARGET_SHORT}" != "vxworks" -a "${SOURCE_TARGET_SHORT}" != "int" \
        -a "${SOURCE_TARGET_SHORT}" != "denx" -a "${SOURCE_TARGET_SHORT}" != "WRlinux" ]
    then
        # oall the new examples for all Languages (including corba options);
        # each Language/corba option is installed only if the target platform is compatible.

        install_example "ContentFilteredTopic"
        install_example "HelloWorld"
        install_example "Lifecycle"
        install_example "Listener"
        install_example "Ownership"
        install_example "QueryCondition"
        install_example "WaitSet"
        install_example "BuiltInTopics"
        if [ "${INCLUDE_SERVICES_NETWORKING}" = "yes" ]
        then
            install_example "NetworkPartitions"
        fi
        # oall end new examples

        install_ascii_file "${OSPL_HOME}/examples/dcps/README.html" \
                   ${HDE_dir}/examples/dcps

        install_git_files_dir_recursive "${OSPL_HOME}/examples/utilities" "${HDE_dir}/examples/utilities"
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/RoundTrip" \
            "${HDE_dir}/examples/dcps/RoundTrip"
        install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Throughput" \
            "${HDE_dir}/examples/dcps/Throughput"

        if [ "${INCLUDE_API_STREAMS}" = "yes" ]
        then
            echo "*       For Streams API"

            echo "*         Copying Streams examples"
            install_git_files_dir_recursive "${OSPL_HOME}/examples/streams/" ${HDE_dir}/examples/streams/
            if [ "${INCLUDE_API_STREAMS_SACPP}" = "no" ]
            then
                echo "*         Removing Standalone C++ Streams Throughput example"
                rm -r ${HDE_dir}/examples/streams/Throughput/cpp
            fi

            # OSPL-7252 : ISOCPP Streams example is excluded from all builds until a proper ISOCPP2 implementation is available
            #if [ "${INCLUDE_API_STREAMS_ISOCPP}" = "no" ]
            #then
                echo "*         Removing ISO C++ Streams Throughput example"
                rm -r ${HDE_dir}/examples/streams/Throughput/isocpp
            #fi

        # delete the 'detail' directories from the ISO C++ streams spec headers - these are examples to vendors
        find ${HDE_dir}/include/streams/isocpp/spec -name "detail" -type d | xargs rm -rf 2>/dev/null

            echo "*         Ready"
        fi
    fi

    # These directories are 'exported' directly into place instead of being copied manually
    # one file at a time from a list @todo this for all examples ??
    install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/Tutorial" "${HDE_dir}/examples/dcps/Tutorial"
    install_git_files_dir_recursive "${OSPL_HOME}/examples/dcps/PingPong" "${HDE_dir}/examples/dcps/PingPong"
    install_git_files_dir_recursive "${OSPL_HOME}/examples/include" "${HDE_dir}/examples/include"

    if [ "${SOURCE_TARGET_SHORT}" != "win" ]
    then
        find ${HDE_dir}/examples/dcps/ -name "*.bat" | xargs rm -rf 2>/dev/null
    fi

    #
    # Copy python stand alone execuitables for Roundtrip and Throughput examples to HDE
    #
    if [ "${OSPL_PYINSTALL_IS_ON}" = "yes" ]
    then
        printf "*     Copy Performance scripts"
        mkdir -p ${HDE_dir}/examples/dcps/PerformanceScripts
        cp ${OSPL_HOME}/examples/dcps/PerformanceScripts/dist/* ${HDE_dir}/examples/dcps/PerformanceScripts/
    fi

    if [ "${SOURCE_TARGET_SHORT}" = "win" -o "${SOURCE_TARGET_SHORT}" = "wince" ]
    then
       find ${HDE_dir}/examples/ -name "RUN" -type f | xargs rm 2>/dev/null
    else
       find ${HDE_dir}/examples/ -name "RUN.bat" -type f | xargs rm 2>/dev/null
    fi

    if [ "${SOURCE_TARGET_SHORT}" = "int" -o "${SOURCE_TARGET_SHORT}" = "vxworks" ]
    then
            # log4c doesn't compile on VxWorks
            rm -rf ${HDE_dir}/examples/utilities
    fi

    # Roundtrip and Throughput examples removed on WinCE, see OSPL-4476.
    if [ "${SOURCE_TARGET_SHORT}" = "wince" ]
    then
        rm -rf ${HDE_dir}/examples/dcps/RoundTrip
        rm -rf ${HDE_dir}/examples/dcps/Throughput
        rm -rf ${HDE_dir}/examples/streams/Throughput
    fi

    if [ "${SOURCE_TARGET_SHORT}" = "int" -o "${SOURCE_TARGET_SHORT}" = "vxworks" -o "$INCLUDE_API_DCPS_CCPP" != "yes" ]
    then
            rm -rf ${HDE_dir}/examples/dcps/Tutorial/cpp/corba
            rm -rf ${HDE_dir}/examples/dcps/PingPong/cpp/corba
    fi

    if [ "${INCLUDE_CXX}" != "yes" -o "${INCLUDE_API_DCPS_ISOCPP}" != "yes" ]
    then
        rm -rf ${HDE_dir}/examples/dcps/RoundTrip/isocpp
        rm -rf ${HDE_dir}/examples/dcps/Tutorial/isocpp
        rm -rf ${HDE_dir}/examples/dcps/Throughput/isocpp
        rm -rf ${HDE_dir}/examples/streams/Throughput/isocpp
    fi

    if [ "${INCLUDE_CXX}" != "yes" -o "${INCLUDE_API_DCPS_ISOCPP2}" != "yes" ]
    then
        rm -rf ${HDE_dir}/examples/dcps/RoundTrip/isocpp2
        rm -rf ${HDE_dir}/examples/dcps/Tutorial/isocpp2
        rm -rf ${HDE_dir}/examples/dcps/Throughput/isocpp2
        rm -rf ${HDE_dir}/examples/streams/Throughput/isocpp2
    fi

    if [ "${INCLUDE_CXX}" != "yes" ]
    then
        rm -rf ${HDE_dir}/examples/dcps/Tutorial/cpp
        rm -rf ${HDE_dir}/examples/dcps/PingPong/cpp
        rm -rf ${HDE_dir}/examples/dcps/RoundTrip/cpp
        rm -rf ${HDE_dir}/examples/dcps/Throughput/cpp
        rm -rf ${HDE_dir}/examples/streams/Throughput/cpp
    fi

    if [ "${INCLUDE_C}" != "yes" ]
    then
        rm -rf ${HDE_dir}/examples/dcps/Tutorial/c
        rm -rf ${HDE_dir}/examples/dcps/PingPong/c
        rm -rf ${HDE_dir}/examples/dcps/RoundTrip/c
        rm -rf ${HDE_dir}/examples/dcps/Throughput/c
    fi
    if [ "${INCLUDE_JAVA}" != "yes" -o "${INCLUDE_API_DCPS_SAJ5}" != "yes" ]
    then
        rm -rf ${HDE_dir}/examples/dcps/RoundTrip/java5
        rm -rf ${HDE_dir}/examples/dcps/Throughput/java5
        rm -rf ${HDE_dir}/examples/protobuf/java5
        rm -rf ${HDE_dir}/examples/dcps/Tutorial/java5
        rm -rf ${HDE_dir}/examples/dcps/HelloWorld/java5
        rm -rf ${HDE_dir}/examples/dcps/BuiltInTopics/java5
        rm -rf ${HDE_dir}/examples/dcps/ContentFilteredTopic/java5
        rm -rf ${HDE_dir}/examples/dcps/Lifecycle/java5
        rm -rf ${HDE_dir}/examples/dcps/Listener/java5
        rm -rf ${HDE_dir}/examples/dcps/Ownership/java5
        rm -rf ${HDE_dir}/examples/dcps/QueryCondition/java5
        rm -rf ${HDE_dir}/examples/dcps/WaitSet/java5
        rm -rf ${HDE_dir}/examples/dcps/PingPong/java5
    fi
    if [ "${INCLUDE_JAVA}" != "yes" -o "${INCLUDE_API_DCPS_CJ5}" != "yes" ]
    then
        rm -rf ${HDE_dir}/examples/dcps/PingPong/java5/corba
    fi
    # RoundTrip example doesn't seem to work on Kernel Mode VxWorks at the moment.
    if [ "${VXWORKS_KERNEL_MODE}" = "yes" ]
    then
        rm -rf ${HDE_dir}/examples/dcps/RoundTrip
    fi

    if [ "${PROTOBUF_HOME}" = "" ]
    then
        rm -rf ${HDE_dir}/examples/protobuf
    fi

    if [ "${INCLUDE_CS}" != "yes" ] || [ "${SOURCE_TARGET_SHORT}" != "win" -a "${SOURCE_TARGET_SHORT}" != "wince" ]
    then
        rm -rf ${HDE_dir}/examples/dcps/Tutorial/cs
        rm -rf ${HDE_dir}/examples/dcps/PingPong/cs
    fi

    if [ "${INCLUDE_JAVA}" != "yes" -o "${INCLUDE_API_DCPS_SAJ}" != "yes" ]
    then
        rm -rf ${HDE_dir}/examples/dcps/Tutorial/java/standalone
        rm -rf ${HDE_dir}/examples/dcps/PingPong/java/standalone
        rm -rf ${HDE_dir}/examples/dcps/Throughput/java
        rm -rf ${HDE_dir}/examples/dcps/RoundTrip/java
    fi
    if [ "${INCLUDE_JAVA}" != "yes" -o "${INCLUDE_API_DCPS_CJ}" != "yes" ]
    then
        rm -rf ${HDE_dir}/examples/dcps/Tutorial/java/corba
        rm -rf ${HDE_dir}/examples/dcps/PingPong/java/corba
    fi

    if [ "${INCLUDE_JAVA}" != "yes" ] || [ "${SOURCE_TARGET_SHORT}" = "int" \
        -o "${SOURCE_TARGET_SHORT}" = "vxworks" -o "${SOURCE_TARGET_SHORT}" = "wince" \
        -o "${SOURCE_TARGET_SHORT}" = "WRlinux" -o "${SOURCE_TARGET_SHORT}" = "pikeos" ]
    then
        rm -rf ${HDE_dir}/examples/dcps/Tutorial/java
        rm -rf ${HDE_dir}/examples/dcps/PingPong/java
    fi

    echo "*       For Protobuf"

    if [ "${PROTOBUF_HOME}" = "" ]
    then
        rm -rf ${HDE_dir}/examples/protobuf
    else

      if [ "${INCLUDE_TOOLS_PROTOBUF}" = "yes" ]
      then
        mkdir -p ${HDE_dir}/examples/protobuf
        mkdir -p ${HDE_dir}/examples/protobuf/proto

        install_ascii_fileset "${OSPL_HOME}/examples/protobuf/proto/*.proto" \
                "${HDE_dir}/examples/protobuf/proto"

        if [ "${INCLUDE_JAVA}" = "yes" -a "${INCLUDE_API_DCPS_SAJ5}" = "yes" ]
        then
            echo "*               Java5"
            mkdir -p ${HDE_dir}/examples/protobuf/java5
            mkdir -p ${HDE_dir}/examples/protobuf/java5/src
            mkdir -p ${HDE_dir}/examples/protobuf/java5/standalone

            install_ascii_fileset "${OSPL_HOME}/examples/protobuf/java5/src/*.java" \
               " ${HDE_dir}/examples/protobuf/java5/src"

            if [ "${SOURCE_TARGET_SHORT}" = "win" ]
            then
               install_ascii_file ${OSPL_HOME}/examples/protobuf/java5/standalone/RUN.bat \
                      ${HDE_dir}/examples/protobuf/java5/standalone
               install_ascii_file ${OSPL_HOME}/examples/protobuf/java5/standalone/BUILD.bat \
                      ${HDE_dir}/examples/protobuf/java5/standalone
            else
               install_ascii_file ${OSPL_HOME}/examples/protobuf/java5/standalone/RUN \
                      ${HDE_dir}/examples/protobuf/java5/standalone
               install_ascii_file ${OSPL_HOME}/examples/protobuf/java5/standalone/BUILD \
                      ${HDE_dir}/examples/protobuf/java5/standalone
            fi
            echo "*               ready"
        fi

        if [ "${INCLUDE_CXX}" = "yes" -a "${INCLUDE_API_DCPS_ISOCPP2}" = "yes" ]
        then
            echo "*               ISOCPP2"
            mkdir -p ${HDE_dir}/examples/protobuf/isocpp2
            mkdir -p ${HDE_dir}/examples/protobuf/isocpp2/src
            mkdir -p ${HDE_dir}/examples/protobuf/isocpp2/standalone

            install_ascii_fileset "${OSPL_HOME}/examples/protobuf/isocpp2/src/*.cpp" \
               " ${HDE_dir}/examples/protobuf/isocpp2/src"
            install_ascii_fileset "${OSPL_HOME}/examples/protobuf/isocpp2/src/*.hpp" \
               " ${HDE_dir}/examples/protobuf/isocpp2/src"

            if [ "${SOURCE_TARGET_SHORT}" = "win" ]
            then
               install_ascii_file ${OSPL_HOME}/examples/protobuf/isocpp2/standalone/RUN.bat \
                      ${HDE_dir}/examples/protobuf/isocpp2/standalone
               install_ascii_file ${OSPL_HOME}/examples/protobuf/isocpp2/standalone/BUILD.bat \
                      ${HDE_dir}/examples/protobuf/isocpp2/standalone
            else
               install_ascii_file ${OSPL_HOME}/examples/protobuf/isocpp2/standalone/RUN \
                      ${HDE_dir}/examples/protobuf/isocpp2/standalone
               if [ -f ${OSPL_HOME}/examples/protobuf/isocpp2/standalone/BUILD.${SPLICE_TARGET_FULL} ]
               then
                  install_ascii_file ${OSPL_HOME}/examples/protobuf/isocpp2/standalone/BUILD.${SPLICE_TARGET_FULL} \
                         ${HDE_dir}/examples/protobuf/isocpp2/standalone BUILD
               else
                  install_ascii_file ${OSPL_HOME}/examples/protobuf/isocpp2/standalone/BUILD \
                         ${HDE_dir}/examples/protobuf/isocpp2/standalone
               fi
            fi
            echo "*               ready"
        fi
      fi
    fi

    update_copyright ${HDE_dir}/examples

    echo "*       ready"
    echo "*     Copy examples Ready"

    #
    # Copy in ospli src for distro
    #
    printf "*     Creating source release ... "
    mkdir -p ${HDE_dir}/src
    if [ $? != 0 ]
    then
        echo "ERROR - couldn't make ${HDE_dir}/src "
    fi
    OSPL_SRC=${HDE_dir}/tmpsrc/VortexOpenSplice
    mkdir -p ${OSPL_SRC}
    if [ $? != 0 ]
    then
        echo "ERROR - couldn't make ${OSPL_SRC} "
    fi
    CURRENT_WD="`pwd`"
    cd $OSPL_HOME
    if [ ! -d "$OSPL_HOME/.git" ]
    then
        echo "WARNING - Not in a repository. Will not include a source package into the distribution - presumably you are building this distribution from a source package already?"
    else
        # Get branch revision, if not found then use head
        if [ -f "${OSPL_HOME}/etc/BUILDINFO" ]
        then
            BREV=`grep -n REV $OSPL_HOME/etc/BUILDINFO`
            BREV_SHA=${BREV#*=}
        else
            BREV_SHA=HEAD
        fi

        git archive --prefix=${OSPL_SRC}/ --format=tar ${BREV_SHA} | $TAR -P -xf -
        if [ $? != 0 ]
        then
            echo "ERROR - archiving $OSPL_HOME failed "
        fi
        MPC_PATH=submods/MPC_ROOT
        cd $MPC_PATH
        git archive --prefix=${OSPL_SRC}/$MPC_PATH/ --format=tar HEAD | $TAR -P -xf -
        if [ $? != 0 ]
        then
            echo "ERROR - archiving $OSPL_HOME/$MPC_PATH failed "
        fi

        BUILD=buildTarGZ
        if [ "${SOURCE_HOST_SHORT}" = "win" ]
        then
            BUILD=buildZip
        fi

        update_copyright ${OSPL_SRC}/examples
        update_copyright ${OSPL_SRC}/external
        update_copyright ${OSPL_SRC}/setup
        update_copyright ${OSPL_SRC}/src
        update_copyright ${OSPL_SRC}/testsuite
        sed -i "s/TO_YEAR/${THIS_YEAR}/g" ${OSPL_SRC}/index.html
        sed -i "s/TO_YEAR/${THIS_YEAR}/g" ${OSPL_SRC}/docs/html/GPBTutorial/using-generated-api.html

        (
            cd $OSPL_SRC/..
            $BUILD ${HDE_dir}/src/VortexOpenSplice-src VortexOpenSplice > /dev/null 2>&1
        )
    fi
    rm -rf ${HDE_dir}/tmpsrc
    cd $CURRENT_WD
    echo "Ready"

    #
    # Platform specific redistributables
    #
    if [ "${SOURCE_HOST_SHORT}" = "win" ]
    then
        printf "*     Copy redistributable system packages ... "
        copy_windows_redist "${HDE_dir}/redist"
        echo "Ready"
    fi

    if [ "${SOURCE_HOST_SHORT}" = "win" ]
    then
        printf "*     Prepare default release.bat ... "
        RELF=${HDE_dir}/release.bat
        echo "@echo off" >> $RELF
        echo "echo \"<<< Vortex OpenSplice HDE Release ${target_version} For ${target}${target_env}, Date ${target_date} >>>\"" >> ${RELF}
        # If SPLICE_ORB is defined during the ospl build make that the default
        # value for the 'runtime' environment but permit overriding
        if [ "${SPLICE_ORB}" = "" ]
        then
            echo "if \"%SPLICE_ORB%\"==\"\" set SPLICE_ORB=DDS_OpenFusion_1_6_1" >> $RELF
        else
            echo "if \"%SPLICE_ORB%\"==\"\" set SPLICE_ORB=${SPLICE_ORB}" >> $RELF
        fi
        echo "set OSPL_HOME=%~dp0" >> $RELF
        if [ "${SPLICE_TARGET}" != "${SPLICE_HOST}" ]
        then
            echo "set PATH=%OSPL_HOME%\bin;%OSPL_HOME%\host\lib;%PATH%" >> $RELF
        else
            echo "set PATH=%OSPL_HOME%\bin;%OSPL_HOME%\lib;%OSPL_HOME%\examples\lib;%PATH%" >> $RELF
        fi
        echo "set OSPL_TMPL_PATH=%OSPL_HOME%\etc\idlpp" >> $RELF

        echo  "if \"%OSPL_URI%\"==\"\" set OSPL_URI=file://%OSPL_HOME%\etc\config\ospl.xml" >> $RELF

        echo "Ready"
    fi
    if [ "${SOURCE_HOST_SHORT}" != "win" -o "${SOURCE_TARGET_SHORT}" = "pikeos" ]
    then
        case "${target}" in
            x86.darwin*|x86_64.darwin*)
                ld_lib_path_var=DYLD_LIBRARY_PATH
                ;;
            *)
                ld_lib_path_var=LD_LIBRARY_PATH
                ;;
        esac
        printf "*     Prepare default release.com ... "
        RELF=${HDE_dir}/release.com
        echo "echo \"<<< Vortex OpenSplice HDE Release ${target_version} For ${target}${target_env}, Date ${target_date} >>>\"" >> ${RELF}
        # If SPLICE_ORB is defined during the ospl build make that the default
        # value for the 'runtime' environment but permit overriding
        if [ "${SPLICE_ORB}" = "" ]
        then
            echo 'if [ "${SPLICE_ORB:=}" = "" ]' >> ${RELF}
            echo "then" >> ${RELF}
            echo "    SPLICE_ORB=DDS_OpenFusion_1_6_1" >> ${RELF}
            echo "    export SPLICE_ORB" >> ${RELF}
            echo "fi"  >> ${RELF}
        else
            echo 'if [ "${SPLICE_ORB:=}" = "" ]' >> ${RELF}
            echo "then" >> ${RELF}
            echo "    SPLICE_ORB=${SPLICE_ORB}" >> ${RELF}
            echo "    export SPLICE_ORB" >> ${RELF}
            echo "fi"  >> ${RELF}
        fi
        echo 'if [ "${SPLICE_JDK:=}" = "" ]' >> ${RELF}
        echo "then" >> ${RELF}
        if [ "${JAVA_IS_PERC}" = "yes" ]
        then
            echo "    SPLICE_JDK=perc" >> ${RELF}
        else
            echo "    SPLICE_JDK=jdk" >> ${RELF}
        fi
        echo "    export SPLICE_JDK" >> ${RELF}
        echo "fi"  >> ${RELF}
        if [ "${SOURCE_HOST_SHORT}" = "win" -a "${SOURCE_TARGET_SHORT}" = "pikeos" ]
        then
            echo 'RELDIR=`dirname "${BASH_SOURCE[0]}"`' >> ${RELF}
            echo 'pushd $RELDIR > /dev/null' >> ${RELF}
            echo "OSPL_HOME=\`cygpath -u \"\$(pwd)\"\`" >> ${RELF}
            echo 'popd > /dev/null' >> ${RELF}
        else
            if [ -z "${OSPL_BUILDER}" ]
            then
                echo "if [ -n \"\${BASH_VERSION}\" ]" >> ${RELF}
                echo "then" >> ${RELF}
                echo "    OSPL_HOME=\"\$(cd \"\$(dirname \"\${BASH_SOURCE[0]}\")\" && pwd)\"" >> ${RELF}
                echo "else" >> ${RELF}
                echo "    echo \"Please manually set OSPL_HOME to the install directory.\"" >> ${RELF}
                echo "fi" >> ${RELF}
            else
                echo "OSPL_HOME=\"@@INSTALLDIR@@/HDE/${target}${target_env}\"" >> ${RELF}
                echo "VORTEX_DIR=\"@@VORTEXDIR@@\"" >> ${RELF}
            fi
        fi
        echo "PATH=\$OSPL_HOME/bin:\$PATH" >> ${RELF}
        if [ "${SPLICE_TARGET}" != "${SPLICE_HOST}" ]
        then
            echo "$ld_lib_path_var=\$OSPL_HOME/host/lib\${$ld_lib_path_var:+:}\$$ld_lib_path_var" >> ${RELF}
        else
            echo "$ld_lib_path_var=\$OSPL_HOME/lib\${$ld_lib_path_var:+:}\$$ld_lib_path_var" >> ${RELF}
        fi
        echo "CPATH=\$OSPL_HOME/include:\$OSPL_HOME/include/sys:\${CPATH:=}" >> ${RELF}

        echo 'if [ "${OSPL_URI:=}" = "" ]' >> $RELF
        echo "then" >> $RELF
        echo "    OSPL_URI=file://\$OSPL_HOME/etc/config/ospl.xml" >> $RELF
        echo "    export OSPL_URI" >> $RELF
        echo "fi" >> $RELF

        if [ "${SOURCE_HOST_SHORT}" = "win" -a "${SOURCE_TARGET_SHORT}" = "pikeos" ]
        then
            echo "PATH=\$OSPL_HOME/host/lib:\$PATH" >> ${RELF}
            echo "OSPL_TMPL_PATH=\`cygpath -w \"\$OSPL_HOME/etc/idlpp\"\`" >> ${RELF}
        else
            echo "OSPL_TMPL_PATH=\$OSPL_HOME/etc/idlpp" >> ${RELF}
            echo ". \$OSPL_HOME/etc/java/defs.\$SPLICE_JDK" >> ${RELF}
        fi

        echo "export OSPL_HOME PATH $ld_lib_path_var CPATH OSPL_TMPL_PATH VORTEX_DIR" >> $RELF

        if [ "$VALGRIND" = "yes" ]
        then
            cat $OSPL_HOME/bin/valgrind_cmds >> $RELF
        fi
        echo "Ready"
    fi

    #
    # Copy documentation
    #
    printf "*     Copy documentation... "
    if [ $? -ne 0 ]
    then
        return 1
    fi

    cp -rp ${OSPL_HOME}/docs ${HDE_dir}

    # Remove the qosprovider source code that exists purely to ensure that the code examples
    # used in the docs actually compiles.  It does not need to be in the installer
    rm -rf ${HDE_dir}/docs/qosprovider
    rm -rf ${HDE_dir}/docs/makefile

    install_ascii_file "${OSPL_HOME}/index.html" "${HDE_dir}"
    # remove documentation for components that are not installed
    if [ "${INCLUDE_API_DCPS_SAJ}" != "yes" -a "${INCLUDE_API_DCPS_CJ}" != "yes" ]
    then
        rm -f ${HDE_dir}/docs/pdf/OpenSplice_refman_Java.pdf
    fi
    if [ "${INCLUDE_API_DCPS_SAC}" != "yes" ]
    then
        rm -f ${HDE_dir}/docs/pdf/OpenSplice_refman_C.pdf
    fi
    if [ "${INCLUDE_API_DCPS_SACPP}" != "yes" -a "${INCLUDE_API_DCPS_CCPP}" != "yes" ]
    then
        rm -f ${HDE_dir}/docs/pdf/OpenSplice_refman_CPP.pdf
    fi
    if [ "${INCLUDE_TOOLS_NODEMON}" != "yes" ]
    then
        rm -rf ${HDE_dir}/docs/pdf/OpenSplice_NodeMonitorGuide.pdf
    fi
    if [ "${INCLUDE_TOOLS_TUNER}" != "yes" ]
    then
        rm -rf ${HDE_dir}/docs/pdf/OpenSplice_TunerGuide.pdf
    fi
    if [ "${INCLUDE_SERVICES_RNR}" != "yes" ]
    then
        rm -rf "$HDE_dir/docs/pdf/OpenSplice_RnRService.pdf"
        rm -rf "$HDE_dir/docs/pdf/OpenSplice_RnRManagerGuide.pdf"
    fi
    if [ "$INCLUDE_API_STREAMS" != "yes" ]
    then
        rm -rf "$HDE_dir/docs/pdf/OpenSplice_StreamsAPIReference.pdf"
    fi
    echo "Ready"

    #
    # Delete Generic DCPS Docs (Generation run should be complete)
    #
    if [ -n "${OSPL_DOCS}" ] && [ "${INCLUDE_API_DCPS_DOCS}" = "yes" -a "${OSPL_DOCS}" != "none" -a "${OSPL_DOCS}" != "ship" ]
    then
            rm -rf ${HDE_dir}/include/dcps/docs
    fi

    sed -i "s/TO_YEAR/$THIS_YEAR/g" ${HDE_dir}/index.html

    if [ -d  ${HDE_dir}/custom_lib ]
    then
       update_copyright ${HDE_dir}/custom_lib
    fi

    #We need to be specific in the docs directory as the pdfs are getting corrupted for
    #some reason
    update_copyright ${HDE_dir}/docs "*.html"
    update_copyright ${HDE_dir}/include


    if [ -d  ${HDE_dir}/tools ]
    then
        update_copyright ${HDE_dir}/tools
    fi

    return 0
}

install_rts_target ()
{
    target_os=`expr "${target}" : '[a-zA-Z0-9]*\.\([a-zA-Z]*\)'`

    mkdir -p ${RTS_dir}

    #
    # Copy default configuration file for OpenSplice
    #
    echo "*     Copy OpenSplice default configuration file "
    mkdir -p ${RTS_dir}/etc
    mkdir -p ${RTS_dir}/etc/config

    if [ "${INCLUDE_SINGLE_PROCESS}" = "yes" ]
    then
        install_configuration_file "${OSPL_HOME}/etc/ospl_sp_no_network.xml" "${RTS_dir}/etc/config"

        if [ "${INCLUDE_SERVICES_DDSI}" = "yes" -o "${INCLUDE_SERVICES_DDSI2E}" = "yes" ]
        then
            install_configuration_file "${OSPL_HOME}/etc/ospl_sp_ddsi.xml" "${RTS_dir}/etc/config"
            install_configuration_file "${OSPL_HOME}/etc/ospl_sp_ddsi_statistics.xml" "${RTS_dir}/etc/config"
            # current requirement is the single process configuration with ddsi2 networking should be default:
            if [ "${target_os}" = "lynxos" ]
            then
                install_configuration_file "${OSPL_OUTER_HOME}/etc/ospl_shmem_ddsi.xml" "${RTS_dir}/etc/config" "ospl.xml"
            else
                install_configuration_file "${OSPL_HOME}/etc/ospl_sp_ddsi.xml" "${RTS_dir}/etc/config" "ospl.xml"
            fi
        else
            install_configuration_file "${OSPL_HOME}/etc/ospl_sp_no_network.xml" "${RTS_dir}/etc/config" "ospl.xml"
        fi
    fi

    # Copy meta-config file used for validating configuration files
    install_ascii_file "${OSPL_HOME}/src/tools/cm/config/code/splice_metaconfig_6.1.xml" "${RTS_dir}/etc" "metaconfig.xml"

    #
    # Copy in the buildinfo if produced from the scoreboard
    #
    if [ -f "${OSPL_HOME}/etc/BUILDINFO" ]
    then
        cp ${OSPL_HOME}/etc/BUILDINFO ${RTS_dir}/etc/.
    fi

    # Copy in features file to the etc directory of the installer.
    if [ -f "${OSPL_HOME}/etc/features.txt" ]
    then
        cp ${OSPL_HOME}/etc/features.txt ${RTS_dir}/etc/.
    fi

    # java definitions

    mkdir -p ${RTS_dir}/etc/java
    cp ${OSPL_HOME}/etc/java/defs.jdk ${RTS_dir}/etc/java

    # done with etc dir

    #
    # Copy in the releaseinfo file
    #
    if [ -f "${OSPL_HOME}/release_info/RELEASE" ]
    then
        cp ${OSPL_HOME}/release_info/RELEASE ${RTS_dir}/etc/RELEASEINFO
    fi
    echo "*     Ready"

    #
    # Copy library files
    #
    printf "*     Copy library files ... "
    release=${OSPL_HOME}/lib/${target}${source_env}
    if [ -d "${release}" ]
    then
        mkdir -p ${RTS_dir}/lib
        install_dir ${release} ${RTS_dir} lib
        if [ "${VXWORKS_KERNEL_MODE}" == "yes" ]
        then
            cp ${RTS_dir}/lib/libddskernel${target_suffix_lib} ${RTS_dir}/lib/libddscore${target_suffix_lib}
        fi
        # remove cpp lib
        rm -f ${RTS_dir}/lib/*ddscpp*
        rm -f ${RTS_dir}/lib/*ddslic*
        rm -f ${RTS_dir}/lib/lib*.a
        # remove all windows .lib files
        if [ "${SOURCE_TARGET_SHORT}" = "win" -o "${SOURCE_TARGET_SHORT}" = "wince" ]
        then
          rm -f ${RTS_dir}/lib/*.lib
        fi
    else
        echo "* ##    No library files detected"
    fi
    echo "Ready"

    #
    # Copy java archive files
    #
    if [ "${target_os}" != "vxworks" -a "${INCLUDE_JAVA}" = "yes" ]
    then
        echo "*     Copy JAVA archive files"
        release=${OSPL_HOME}/jar/${target}${source_env}
        if [ -d "${release}" ]
        then
            mkdir -p ${RTS_dir}/jar
            install_dir ${release} ${RTS_dir} jar
            rm -f ${RTS_dir}/jar/openorb*
            # OSPL-6341 Create dcpssaj-osgi-bundle.jar for backwards compatibility
            if  [ "${INCLUDE_API_DCPS_SAJ}" = "yes" ]
            then
                cp ${release}/dcpssaj.jar ${RTS_dir}/jar/dcpssaj-osgi-bundle.jar
            fi
        else
            echo "* ##    No JAVA archive files detected"
        fi
        echo "*     JAVA archive Ready"
    fi

    #
    # Copy script files
    #
    echo "*     Copy script files"
    release=${OSPL_HOME}/install/bin
    if [ -d "${release}" ]
    then
        mkdir -p ${RTS_dir}/bin
    if [ "${VXWORKS_KERNEL_MODE}" != "yes" -a "${SOURCE_TARGET_SHORT}" != "vxworks" ]
    then
           install_ascii_file "${release}/osplconf${suffix_script}" "${RTS_dir}/bin"
    fi
        if [ "${SOURCE_HOST_SHORT}" = "win" ]
        then
            if [ "${SOURCE_TARGET_SHORT}" = "win" ]
            then
                install_ascii_file "${release}/osplctrl${suffix_script}" "${RTS_dir}/bin"
                if [ "${INCLUDE_TOOLS_MMSTAT}" = "yes" ]
                then
                    install_ascii_file "${release}/osplmmstat${suffix_script}" "${RTS_dir}/bin"
                fi
            fi
            install_ascii_file "${release}/run.vbs" "${RTS_dir}/bin"
        fi
    else
        echo "* ##    No script files detected"
    fi
    echo "*     Script files Ready"

    #
    # Copy executable files
    #
    echo "*     Copy OpenSplice executables"
    release=${OSPL_HOME}/exec/${target}${source_env}
    if [ -d "${release}" ]
    then
        mkdir -p ${RTS_dir}/bin

        if [ "${SOURCE_TARGET_SHORT}" != "int" ]
        then
            if [ "${INCLUDE_TOOLS_SHMDUMP}" = "yes" ]
            then
                install_bin_file ${release} ${RTS_dir} bin shmdump${target_suffix_exe}
            fi
            if [ "$INCLUDE_TOOLS_MMSTAT" = "yes" ]
            then
                install_bin_file ${release} ${RTS_dir} bin mmstat${target_suffix_exe}
            fi

            if [ "${INCLUDE_TOOLS_DEBUG_DBD}" = "yes" ]
            then
                install_bin_file ${release} ${RTS_dir} bin dbd${target_suffix_exe}
            fi
        fi

        pdbfiles=`ls ${OSPL_HOME}/exec/${target}${source_env}/*.pdb 2>/dev/null`
        if [ "${SOURCE_TARGET_SHORT}" = "win" -o "${SOURCE_TARGET_SHORT}" = "wince" ] && [ -n "${pdbfiles}" ]
        then
            cp ${pdbfiles} ${RTS_dir}/bin
            rm -rf ${RTS_dir}/bin/corecount.pdb
        fi
    else
        echo "* ##    No executable files detected"
    fi

    if [ "${SOURCE_TARGET_SHORT}" = "win" ]
    then
        # Put all the *.pdb's into the bin directory if this is win platform.
        mv ${RTS_dir}/lib/*.dll ${RTS_dir}/bin/.  >& /dev/null
        mv ${RTS_dir}/lib/*.netmodule ${RTS_dir}/bin/.  >& /dev/null
        mv ${RTS_dir}/lib/*.pdb ${RTS_dir}/bin/.  >& /dev/null
        rm -rf ${RTS_dir}/bin/corecount.pdb
    fi

    #
    # Platform specific redistributables
    #

    if [ "${SOURCE_HOST_SHORT}" = "win" ]
    then
        printf "*     Copy redistributable system packages ... "
        copy_windows_redist "${RTS_dir}/redist"
        echo "Ready"
    fi

    #
    # Create and sign a Global Assembly for the SACS Dll
    #
    if [ "${INCLUDE_CS}" = "yes" -a "${INCLUDE_API_DCPS_SACS}" = "yes" ]
    then
        if [ "${SOURCE_TARGET_SHORT}" = "win" -o "${SOURCE_TARGET_SHORT}" = "wince" ]
        then
            printf "*     Create and sign a Global Assembly for the SACS DLL ..."
            cskeyfile=`cygpath -d "${OSPL_HOME}/src/api/dcps/sacs/dcpssacs.snk"`
            csoutdir=`cygpath -d "${RTS_dir}/bin/"`
            csmodfile=`cygpath -d "${OSPL_HOME}/lib/${target}${source_env}/dcpssacs.netmodule"`
            csoutfile="${csoutdir}${CS_ASSEMBLY_NAME}.dll"

            case "${target}" in
                x86.*)
                    CS_PLATFORM=x86
                    ;;
                x86_64.*)
                    CS_PLATFORM=x64
                    ;;
                *)
                    CS_PLATFORM=anycpu
                    ;;
            esac

            al /t:library /keyfile:"${cskeyfile}" /platform:${CS_PLATFORM} /v:${CS_DLL_VERSION} /out:"${csoutfile}" "${csmodfile}"
        fi
    fi
    # This needs to be changed when we support C# for linux and add an else part
    # that will set all these variables correctly and call the appropriate mono
    # executable for the assembly linker.
    echo "*     Ready"

    if [ "${SOURCE_TARGET_SHORT}" != "win" -a "${SOURCE_TARGET_SHORT}" != "wince" ]
    then
        # release.com on VxWorks isn't needed in the RTS installer.
        if [ "${SOURCE_TARGET_SHORT}" != "vxworks" ]
        then
            printf "*     Prepare default release.com ... "
            RELF=${RTS_dir}/release.com
            echo "echo \"<<< Vortex OpenSplice RTS Release ${target_version} For ${target}${target_env} Date ${target_date} >>>\"" >> $RELF
            if [ "${SPLICE_ORB}" = "" ]
            then
                echo 'if [ "${SPLICE_ORB:=}" = "" ]' >> $RELF
                echo "then" >> $RELF
                echo "    SPLICE_ORB=DDS_OpenFusion_1_6_1" >> $RELF
                echo "    export SPLICE_ORB" >> $RELF
                echo "fi"  >> $RELF
            else
                echo 'if [ "${SPLICE_ORB:=}" = "" ]' >> $RELF
                echo "then" >> $RELF
                echo "    SPLICE_ORB=${SPLICE_ORB}" >> $RELF
                echo "    export SPLICE_ORB" >> $RELF
                echo "fi"  >> $RELF
            fi
            echo 'if [ "${SPLICE_JDK:=}" = "" ]' >> ${RELF}
            echo "then" >> ${RELF}
            if [ "${JAVA_IS_PERC}" = "yes" ]
            then
                echo "    SPLICE_JDK=perc" >> ${RELF}
            else
                echo "    SPLICE_JDK=jdk" >> ${RELF}
            fi
            echo "    export SPLICE_JDK" >> ${RELF}
            echo "fi"  >> ${RELF}
            if [ -z "${OSPL_BUILDER}" ]
            then
		echo "if test -n \"\$BASH_VERSION\"; then" >> ${RELF}
                echo "    OSPL_HOME=\"\$( cd \"\$( echo \"\${BASH_SOURCE[0]%/*}\")\" && pwd )\"" >> ${RELF}
		echo "else" >> ${RELF}
		echo "    echo \"Please manually set OSPL_HOME to the install directory.\"" >> ${RELF}
		echo "fi" >> ${RELF}
            else
                echo "OSPL_HOME=\"@@INSTALLDIR@@/RTS/${target}${target_env}\"" >> ${RELF}
                echo "VORTEX_DIR=\"@@VORTEXDIR@@\"" >> ${RELF}
            fi
            echo "PATH=\$OSPL_HOME/bin:\$PATH" >> $RELF
            echo "LD_LIBRARY_PATH=\$OSPL_HOME/lib:\${LD_LIBRARY_PATH:=}" >> $RELF

            echo 'if [ "${OSPL_URI:=}" = "" ]' >> $RELF
            echo "then" >> $RELF
            echo "    OSPL_URI=file://\$OSPL_HOME/etc/config/ospl.xml" >> $RELF
            echo "    export OSPL_URI" >> $RELF
            echo "fi" >> $RELF

            echo ". \$OSPL_HOME/etc/java/defs.\$SPLICE_JDK" >> ${RELF}
            echo "export OSPL_HOME PATH LD_LIBRARY_PATH" >> $RELF
        fi
        echo "Ready"
    else
        printf "*     Prepare default release.bat ... "
        RELF=${RTS_dir}/release.bat
        echo "@echo off" >> $RELF
        echo "if \"%SPLICE_ORB%\"==\"\" set SPLICE_ORB=DDS_OpenFusion_1_6_1" >> $RELF
        echo "set OSPL_HOME=%~dp0" >> $RELF
        echo "set PATH=%OSPL_HOME%\bin;%PATH%" >> $RELF
        echo "set OSPL_TMPL_PATH=%OSPL_HOME%\etc\idlpp" >> $RELF
        echo  "if \"%OSPL_URI%\"==\"\" set OSPL_URI=file://%OSPL_HOME%\etc\config\ospl.xml" >> $RELF
        echo "Ready"
    fi

    if [ -d  ${RTS_dir}/tools ]
    then
        update_copyright ${RTS_dir}/tools
    fi
}
